<%# List of notifications %>
<% if notifications.empty? %>
  <div class="p-8 text-center">
    <%# Simple empty state %>
    <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-taupe-light flex items-center justify-center">
      <svg class="w-6 h-6 text-taupe" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
      </svg>
    </div>
    <p class="text-brown-light text-sm">All caught up!</p>
  </div>
<% else %>
  <div class="notification-list-items space-y-0.5 py-1">
    <% notifications.each do |notification| %>
      <%= render "notifications/notification", notification: notification %>
    <% end %>
  </div>
<% end %>
