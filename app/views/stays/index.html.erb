<div class="h-[calc(100vh-3.5rem)] flex flex-col" data-controller="map"
     data-map-stays-url-value="<%= api_stays_path %>"
     data-map-pois-url-value="/api/stays/:id/pois"
     data-map-transit-url-value="/api/stays/:id/transit_routes"
     data-map-pois-search-url-value="<%= api_pois_search_path %>"
     data-map-bucket-list-url-value="<%= api_bucket_list_items_path %>">
  <!-- Header -->
  <div class="bg-cream border-b border-taupe-light px-4 py-3 flex items-center gap-4 overflow-x-auto">
    <!-- POI Toggles -->
    <div class="flex items-center gap-2">
      <button type="button" data-action="click->map#togglePoi" data-category="bus_stops"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-2.5 h-2.5 rounded-full" style="background-color: #65a30d;"></span>
        Bus Stops
      </button>
      <button type="button" data-action="click->map#togglePoi" data-category="stations"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-2.5 h-2.5 rounded-full" style="background-color: #ef4444;"></span>
        Rail Stops
      </button>
      <button type="button" data-action="click->map#togglePoi" data-category="coffee"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-2.5 h-2.5 rounded-full" style="background-color: #92400e;"></span>
        Coffee
      </button>
      <button type="button" data-action="click->map#togglePoi" data-category="grocery"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-2.5 h-2.5 rounded-full" style="background-color: #f59e0b;"></span>
        Grocery
      </button>
      <button type="button" data-action="click->map#togglePoi" data-category="food"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-2.5 h-2.5 rounded-full" style="background-color: #dc2626;"></span>
        Food
      </button>
      <button type="button" data-action="click->map#togglePoi" data-category="gym"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-2.5 h-2.5 rounded-full" style="background-color: #7c3aed;"></span>
        Gyms
      </button>
      <button type="button" data-action="click->map#togglePoi" data-category="coworking"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-2.5 h-2.5 rounded-full" style="background-color: #0891b2;"></span>
        Coworking
      </button>
      <button type="button" data-action="click->map#togglePoi" data-category="library"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-2.5 h-2.5 rounded-full" style="background-color: #4f46e5;"></span>
        Libraries
      </button>
    </div>

    <!-- Transit Route Toggles -->
    <div class="border-l border-taupe-light pl-4 flex items-center gap-2">
      <button type="button" data-action="click->map#toggleTransit" data-route-type="train"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-3 h-1 rounded-sm" style="background-color: #1d4ed8;"></span>
        Train
      </button>
      <button type="button" data-action="click->map#toggleTransit" data-route-type="rails"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-3 h-1 rounded-sm" style="background-color: #e11d48;"></span>
        Rails
      </button>
      <button type="button" data-action="click->map#toggleTransit" data-route-type="bus"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-3 h-1 rounded-sm" style="background-color: #65a30d;"></span>
        Bus
      </button>
      <button type="button" data-action="click->map#toggleTransit" data-route-type="ferry"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-3 h-1 rounded-sm" style="background-color: #0284c7;"></span>
        Ferry
      </button>
    </div>

    <!-- Bucket List Toggle -->
    <div class="border-l border-taupe-light pl-4 flex items-center gap-2">
      <button type="button" data-action="click->map#toggleBucketList"
              class="map-toggle-btn px-3 py-1 text-sm flex items-center gap-1.5"
              data-map-target="bucketListToggle">
        <span class="loading-spinner"></span>
        <span class="legend-dot w-2.5 h-2.5 rounded-full" style="background-color: #ec4899;"></span>
        Bucket List
      </button>
    </div>
  </div>

  <!-- Map and Timeline Container -->
  <div class="flex-1 relative">
    <!-- Timeline Side-Panel -->
    <div data-map-target="timeline" class="map-panel bg-cream absolute left-0 top-0 bottom-0 w-80 shadow-cozy-lg z-[1000] transition-transform duration-300"
         data-collapsed="false">
      <!-- Collapse Toggle Button -->
      <button data-action="click->map#toggleTimeline"
              class="absolute -right-8 top-1/2 -translate-y-1/2 bg-cream shadow-cozy rounded-r-2xl p-2 hover:bg-taupe-light border border-l-0 border-taupe-light">
        <svg data-map-target="collapseIcon" class="w-4 h-4 text-brown transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>

      <!-- Panel Content -->
      <div class="h-full overflow-y-auto p-4">
        <!-- Upcoming Stays Section -->
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-brown">Upcoming Stays</h2>
          <%= link_to new_stay_path, class: "w-8 h-8 flex items-center justify-center rounded-full bg-coral-light text-coral-dark hover:bg-coral transition-colors text-base font-bold" do %>
            +
          <% end %>
        </div>
        <div data-map-target="upcomingStaysList" class="space-y-2">
          <!-- Upcoming stays populated dynamically -->
        </div>

        <!-- Dream Destinations Section (wishlist stays without dates) -->
        <div class="mt-6 pt-4 border-t border-taupe-light">
          <button data-action="click->map#toggleDreamDestinations"
                  data-map-target="dreamDestinationsToggle"
                  class="w-full flex items-center justify-between text-left mb-3 group">
            <h2 class="text-lg font-semibold text-lavender-dark group-hover:text-lavender transition-colors flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
              Dream Destinations
            </h2>
            <div class="flex items-center gap-2">
              <span data-map-target="dreamDestinationsCount" class="text-sm text-lavender"></span>
              <svg data-map-target="dreamDestinationsChevron" class="w-4 h-4 text-lavender-dark transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </button>
          <div data-map-target="dreamDestinationsList" class="space-y-2 hidden">
            <!-- Dream destinations populated dynamically -->
          </div>
        </div>

        <!-- Previous Stays Section -->
        <div class="mt-6 pt-4 border-t border-taupe-light">
          <button data-action="click->map#togglePreviousStays"
                  data-map-target="previousStaysToggle"
                  class="w-full flex items-center justify-between text-left mb-3 group">
            <h2 class="text-lg font-semibold text-brown-light group-hover:text-brown transition-colors">Previous Stays</h2>
            <div class="flex items-center gap-2">
              <span data-map-target="previousStaysCount" class="text-sm text-brown-lighter"></span>
              <svg data-map-target="previousStaysChevron" class="w-4 h-4 text-brown-light transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </button>
          <div data-map-target="previousStaysList" class="space-y-2 hidden">
            <!-- Previous stays populated dynamically -->
          </div>
        </div>
      </div>
    </div>

    <!-- Map Container -->
    <div id="map" class="absolute inset-0" data-map-target="container">
    </div>

    <!-- Floating Stay Card -->
    <div data-map-target="floatingCard"
         class="hidden absolute bottom-4 right-4 z-[1000] cozy-card p-4 min-w-56 max-w-72 cursor-pointer transition-all duration-200 hover:shadow-cozy-lg hover:-translate-y-0.5 overflow-visible"
         data-action="click->map#goToStayDetails">
      <!-- Decorative vine flourish (top-right) -->
      <div class="absolute -top-3 -right-3 w-10 h-10 opacity-70">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2C9 5 7 8 7 11c0 2 1 3 2 4-2 0-4 1-5 3 2-1 4-1 6 0-1 2-1 4 0 6 1-2 2-4 4-5 2 1 3 3 4 5 1-2 1-4 0-6 2-1 4-1 6 0-1-2-3-3-5-3 1-1 2-2 2-4 0-3-2-6-5-9" stroke="#8FA68F" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          <circle cx="12" cy="11" r="2" fill="#8FA68F" opacity="0.6"/>
        </svg>
      </div>

      <!-- Location icon + title -->
      <div class="flex items-start gap-2">
        <div class="w-8 h-8 rounded-full bg-rose-light flex items-center justify-center flex-shrink-0 mt-0.5">
          <svg class="w-4 h-4 text-rose-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <h3 data-map-target="floatingCardTitle" class="font-semibold text-brown truncate"></h3>
          <p data-map-target="floatingCardLocation" class="text-sm text-brown-light truncate"></p>
          <p data-map-target="floatingCardDates" class="text-xs text-brown-lighter mt-0.5"></p>
        </div>
      </div>

      <!-- View Details link -->
      <div class="flex justify-end mt-2">
        <span class="text-rose-dark font-medium text-sm flex items-center gap-1 hover:text-rose transition-colors">
          View Details
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </span>
      </div>
    </div>
  </div>
</div>
