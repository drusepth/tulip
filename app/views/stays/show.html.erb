<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Hero Section with Botanical Flourishes -->
  <div class="relative mb-8">
    <!-- Top-left botanical flourish -->
    <div class="absolute -top-6 -left-6 w-44 h-44 z-10 pointer-events-none">
      <svg viewBox="0 0 100 100" class="w-full h-full text-sage" style="opacity: 0.2;">
        <!-- Main curved stem -->
        <path d="M5 5 Q30 8, 45 25 Q60 42, 70 65" stroke="currentColor" fill="none" stroke-width="2" stroke-linecap="round"/>
        <!-- Leaves along stem -->
        <path d="M15 8 Q25 2, 30 12 Q20 15, 15 8" fill="currentColor"/>
        <path d="M32 18 Q45 10, 50 22 Q38 28, 32 18" fill="currentColor"/>
        <path d="M48 35 Q62 28, 65 42 Q52 48, 48 35" fill="currentColor"/>
        <!-- Small accent leaves -->
        <path d="M8 15 Q15 20, 10 28 Q5 22, 8 15" fill="currentColor" style="opacity: 0.6;"/>
        <path d="M25 30 Q32 38, 25 45 Q20 38, 25 30" fill="currentColor" style="opacity: 0.6;"/>
      </svg>
    </div>

    <!-- Top-right botanical flourish -->
    <div class="absolute -top-6 -right-6 w-44 h-44 z-10 pointer-events-none">
      <svg viewBox="0 0 100 100" class="w-full h-full text-rose" style="opacity: 0.2;">
        <!-- Main curved stem (mirrored) -->
        <path d="M95 5 Q70 8, 55 25 Q40 42, 30 65" stroke="currentColor" fill="none" stroke-width="2" stroke-linecap="round"/>
        <!-- Leaves along stem -->
        <path d="M85 8 Q75 2, 70 12 Q80 15, 85 8" fill="currentColor"/>
        <path d="M68 18 Q55 10, 50 22 Q62 28, 68 18" fill="currentColor"/>
        <path d="M52 35 Q38 28, 35 42 Q48 48, 52 35" fill="currentColor"/>
        <!-- Small accent leaves -->
        <path d="M92 15 Q85 20, 90 28 Q95 22, 92 15" fill="currentColor" style="opacity: 0.6;"/>
        <path d="M75 30 Q68 38, 75 45 Q80 38, 75 30" fill="currentColor" style="opacity: 0.6;"/>
      </svg>
    </div>

    <% if @stay.image_url.present? %>
      <!-- Hero image with enhanced styling -->
      <div class="relative rounded-3xl overflow-hidden shadow-cozy-lg">
        <img src="<%= @stay.image_url %>" alt="<%= @stay.title %>" class="w-full h-72 sm:h-80 object-cover">
        <!-- Gradient overlay for depth -->
        <div class="absolute inset-0 bg-gradient-to-t from-brown via-transparent to-transparent" style="opacity: 0.3;"></div>
        <!-- Subtle warm overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-rose via-transparent to-sage" style="opacity: 0.08;"></div>
      </div>
    <% end %>
  </div>

  <!-- Header -->
  <div class="mb-8 flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
    <div>
      <div class="flex items-center gap-3 flex-wrap">
        <h1 class="text-3xl sm:text-4xl font-bold text-brown"><%= @stay.title %></h1>
        <% if @stay.booked? %>
          <span class="badge <%= case @stay.status
              when 'upcoming' then 'badge-upcoming'
              when 'current' then 'badge-current'
              when 'past' then 'badge-past'
              end %>">
            <%= @stay.status.capitalize %>
          </span>
        <% else %>
          <span class="badge badge-planned">
            Planned
          </span>
        <% end %>
        <% unless @is_owner %>
          <span class="badge bg-lavender-light text-lavender-dark border border-lavender">
            <svg class="w-3 h-3 mr-1 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Shared with you
          </span>
        <% end %>
      </div>

      <p class="text-brown-light mt-2 flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span><%= [@stay.city, @stay.country].compact.join(', ') %></span>
        <% if @stay.booked? && @stay.stay_type.present? %>
          <span class="mx-2 text-taupe">·</span>
          <span class="capitalize"><%= @stay.stay_type %></span>
        <% end %>
      </p>
      <% all_people = [@stay.user] + @stay.collaborators.to_a %>
      <% if all_people.size > 1 || @is_owner %>
        <div class="mt-2">
          <div class="relative inline-block" data-controller="collaborators-popover">
            <!-- Clickable avatar stack -->
            <button type="button" class="flex -space-x-2 cursor-pointer hover:opacity-80 transition-opacity" data-action="click->collaborators-popover#toggle">
              <!-- Owner avatar -->
              <%= avatar_tag(@stay.user, size: 28, html_options: {
                class: "w-7 h-7 ring-2 ring-sage border border-cream"
              }) %>
              <!-- Collaborator avatars (max 4) -->
              <% @stay.collaborators.limit(4).each do |collaborator| %>
                <%= avatar_tag(collaborator, size: 28, html_options: {
                  class: "w-7 h-7 ring-2 ring-lavender border border-cream"
                }) %>
              <% end %>
              <!-- Overflow indicator -->
              <% if @stay.collaborator_count > 4 %>
                <span class="flex items-center justify-center w-7 h-7 rounded-full bg-taupe-light ring-2 ring-taupe border border-cream text-xs font-medium text-brown">
                  +<%= @stay.collaborator_count - 4 %>
                </span>
              <% end %>
            </button>

            <!-- Popover dropdown -->
            <div data-collaborators-popover-target="popover" class="hidden absolute left-0 top-full mt-2 z-50 min-w-48 bg-white rounded-xl shadow-cozy-lg border border-taupe-light p-3">
              <div class="text-xs font-medium text-brown-light uppercase tracking-wide mb-2">Travelers</div>
              <div class="space-y-2">
                <!-- Owner -->
                <div class="flex items-center gap-2">
                  <%= avatar_tag(@stay.user, size: 32, html_options: { class: "w-8 h-8 ring-2 ring-sage" }) %>
                  <div class="flex-1 min-w-0">
                    <div class="text-sm font-medium text-brown truncate"><%= @stay.user.name %></div>
                    <div class="text-xs text-sage-dark">Owner</div>
                  </div>
                </div>
                <!-- Collaborators -->
                <% @stay.collaborators.each do |collaborator| %>
                  <div class="flex items-center gap-2">
                    <%= avatar_tag(collaborator, size: 32, html_options: { class: "w-8 h-8 ring-2 ring-lavender" }) %>
                    <div class="flex-1 min-w-0">
                      <div class="text-sm font-medium text-brown truncate"><%= collaborator.name %></div>
                      <div class="text-xs text-lavender-dark">Editor</div>
                    </div>
                  </div>
                <% end %>
              </div>
              <% if @is_owner %>
                <%= link_to stay_collaborations_path(@stay), class: "block mt-3 pt-2 border-t border-taupe-light text-xs text-center text-sage-dark hover:text-sage font-medium" do %>
                  Manage collaborators
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="flex gap-2 flex-wrap sm:flex-nowrap">
      <% if @can_edit %>
        <%= link_to edit_stay_path(@stay), class: "btn-outline" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>
      <% end %>
      <% if @is_owner %>
        <%= link_to stay_collaborations_path(@stay), class: "btn-outline" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
          </svg>
          Share
        <% end %>
        <%= button_to stay_path(@stay), method: :delete, data: { turbo_confirm: "Are you sure? This will also remove access for all collaborators." }, class: "btn-outline border-rose text-rose-dark hover:bg-rose-light" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      <% else %>
        <%= button_to leave_stay_collaborations_path(@stay), method: :delete, data: { turbo_confirm: "Leave this stay? You'll need a new invite link to rejoin." }, class: "btn-outline border-rose text-rose-dark hover:bg-rose-light" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          Leave
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Dates Card -->
      <div class="cozy-card p-5">
        <div class="flex items-center gap-2 mb-4">
          <svg class="w-5 h-5 text-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <h2 class="text-lg font-semibold text-brown">Dates</h2>
        </div>

        <% if @stay.has_dates? %>
          <!-- Compact Timeline -->
          <div class="flex items-center gap-3">
            <!-- Check-in date -->
            <div class="flex items-center gap-2">
              <div class="w-3 h-3 rounded-full bg-sage border border-sage-dark"></div>
              <div>
                <p class="text-sm font-semibold text-brown leading-tight"><%= @stay.check_in.strftime('%b %d') %></p>
                <p class="text-xs text-brown-light"><%= @stay.check_in.strftime('%Y') %></p>
              </div>
            </div>

            <!-- Connecting line with duration -->
            <div class="flex-1 flex items-center">
              <div class="flex-1 border-t-2 border-dashed border-taupe"></div>
              <div class="mx-2 px-2 py-0.5 bg-cream rounded-full border border-taupe text-xs">
                <span class="font-semibold text-brown"><%= @stay.duration_days %></span>
                <span class="text-brown-light ml-0.5">nights</span>
              </div>
              <div class="flex-1 border-t-2 border-dashed border-taupe"></div>
            </div>

            <!-- Check-out date -->
            <div class="flex items-center gap-2">
              <div>
                <p class="text-sm font-semibold text-brown leading-tight"><%= @stay.check_out.strftime('%b %d') %></p>
                <p class="text-xs text-brown-light"><%= @stay.check_out.strftime('%Y') %></p>
              </div>
              <div class="w-3 h-3 rounded-full bg-rose border border-rose-dark"></div>
            </div>
          </div>

          <!-- Countdown -->
          <% if @stay.status == 'upcoming' && @stay.days_until_check_in.present? %>
            <div class="mt-4 pt-3 border-t border-dashed border-taupe-light">
              <p class="text-center text-brown-light text-sm">
                <svg class="w-4 h-4 inline-block mr-1 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                </svg>
                <span class="font-semibold text-sage-dark"><%= @stay.days_until_check_in %> days</span> to go!
              </p>
            </div>
          <% elsif @stay.status == 'current' && @stay.days_until_check_out.present? %>
            <div class="mt-4 pt-3 border-t border-dashed border-taupe-light">
              <p class="text-center text-brown-light text-sm">
                <svg class="w-4 h-4 inline-block mr-1 text-rose" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                <span class="font-semibold text-rose-dark"><%= @stay.days_until_check_out %> days</span> left to enjoy!
              </p>
            </div>
          <% end %>
        <% else %>
          <!-- No dates yet (wishlist item) -->
          <div class="text-center py-4">
            <div class="w-12 h-12 rounded-full bg-lavender-light flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-lavender-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </div>
            <p class="text-brown-light mb-3">This is a dream destination - no dates set yet.</p>
            <%= link_to edit_stay_path(@stay), class: "btn-primary text-sm" do %>
              Add travel dates
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Notes -->
      <%= render "stays/notes_section", stay: @stay %>

      <!-- Bucket List -->
      <%= render "bucket_list_items/section", stay: @stay %>

      <!-- Comments -->
      <%= render "comments/section", stay: @stay %>

      <!-- Address & Mini Map (only shown for booked stays with address) -->
      <% if @stay.booked? && @stay.address.present? %>
        <div class="relative overflow-hidden cozy-card p-6">
          <!-- Decorative corner flourish -->
          <div class="absolute top-0 right-0 w-20 h-20 opacity-5">
            <svg viewBox="0 0 100 100" fill="currentColor" class="text-rose-dark">
              <path d="M100 0 Q60 10, 50 50 Q40 90, 0 100 L100 100 Z"/>
            </svg>
          </div>

          <!-- Header -->
          <div class="relative flex items-start justify-between mb-5">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-rose-light to-rose flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h2 class="text-lg font-semibold text-brown">Location</h2>
                <p class="text-xs text-brown-light">Where you'll be staying</p>
              </div>
            </div>
            <%= link_to map_path(focus: @stay.id), class: "inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium text-rose-dark hover:bg-rose-light transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
              View Map
            <% end %>
          </div>

          <p class="relative text-brown mb-4"><%= @stay.full_address %></p>
          <% if @stay.latitude.present? && @stay.longitude.present? %>
            <div id="mini-map" class="relative h-48 rounded-2xl"
                 data-controller="mini-map"
                 data-mini-map-lat-value="<%= @stay.latitude %>"
                 data-mini-map-lng-value="<%= @stay.longitude %>"
                 data-mini-map-title-value="<%= @stay.title %>">
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Booking Status -->
      <% if @stay.booked? %>
        <% if @stay.booking_url.present? %>
          <%= link_to @stay.booking_url, target: "_blank", rel: "noopener", class: "block group" do %>
            <div class="relative overflow-hidden rounded-3xl shadow-cozy p-6 cursor-pointer
                        bg-gradient-to-br from-sage-light via-white to-rose-light
                        border-2 border-sage
                        transition-all duration-300 ease-out
                        hover:shadow-xl hover:scale-[1.02] hover:border-sage">
              <!-- Decorative elements -->
              <div class="absolute top-0 right-0 w-24 h-24 opacity-10 transform translate-x-8 -translate-y-8">
                <svg viewBox="0 0 100 100" fill="currentColor" class="text-sage-dark">
                  <path d="M50 5 C60 20, 80 20, 80 40 C80 60, 60 70, 50 95 C40 70, 20 60, 20 40 C20 20, 40 20, 50 5Z"/>
                </svg>
              </div>
              <div class="absolute bottom-0 left-0 w-16 h-16 opacity-10 transform -translate-x-4 translate-y-4">
                <svg viewBox="0 0 100 100" fill="currentColor" class="text-rose">
                  <path d="M50 5 C60 20, 80 20, 80 40 C80 60, 60 70, 50 95 C40 70, 20 60, 20 40 C20 20, 40 20, 50 5Z"/>
                </svg>
              </div>

              <div class="relative flex items-center justify-between">
                <div>
                  <div class="flex items-center gap-2 mb-1">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-sage-light">
                      <svg class="w-4 h-4 text-sage-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </span>
                    <span class="text-xs font-medium text-sage-dark uppercase tracking-wide">Confirmed</span>
                  </div>
                  <h2 class="text-lg font-semibold text-brown group-hover:text-sage-dark transition-colors">View Booking</h2>
                  <p class="text-sm text-brown-light">Open reservation details</p>
                </div>
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center group-hover:bg-sage group-hover:shadow-md transition-all duration-300">
                    <svg class="w-5 h-5 text-sage-dark group-hover:text-white group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <% days_until = @stay.days_until_check_in %>
        <% needs_urgent_booking = @stay.needs_booking_alert? %>
        <% card_gradient = needs_urgent_booking ? 'from-coral to-rose' : 'from-lavender to-lavender-dark' %>
        <% text_color = needs_urgent_booking ? 'text-coral-dark' : 'text-lavender-dark' %>
        <%= link_to edit_stay_path(@stay), class: "block group" do %>
          <div class="relative overflow-hidden rounded-3xl shadow-cozy p-6 cursor-pointer bg-gradient-to-br <%= card_gradient %> transition-all duration-300 ease-out hover:shadow-xl hover:scale-[1.02] hover:brightness-105">
            <!-- Decorative elements -->
            <div class="absolute top-0 right-0 w-24 h-24 opacity-20 transform translate-x-8 -translate-y-8">
              <svg viewBox="0 0 100 100" fill="currentColor" class="text-white">
                <path d="M50 10 Q65 25, 65 45 Q65 65, 50 80 Q35 65, 35 45 Q35 25, 50 10 Z"/>
                <path d="M30 30 Q45 35, 50 50 Q45 55, 30 50 Q25 40, 30 30 Z" opacity="0.6"/>
                <path d="M70 30 Q55 35, 50 50 Q55 55, 70 50 Q75 40, 70 30 Z" opacity="0.6"/>
              </svg>
            </div>
            <div class="absolute bottom-0 left-0 w-20 h-20 opacity-15 transform -translate-x-6 translate-y-6">
              <svg viewBox="0 0 100 100" fill="currentColor" class="text-white">
                <circle cx="50" cy="50" r="35"/>
                <circle cx="50" cy="50" r="20" opacity="0.5"/>
              </svg>
            </div>

            <div class="relative">
              <!-- Status indicator -->
              <div class="flex items-center gap-2 mb-3">
                <span class="inline-flex items-center justify-center w-8 h-8 rounded-full" style="background-color: rgba(255,255,255,0.3);">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </span>
                <span class="text-xs font-medium text-white uppercase tracking-wide">
                  <%= needs_urgent_booking ? 'Book Soon' : 'Planned' %>
                </span>
              </div>

              <!-- Main content -->
              <h2 class="text-xl font-semibold text-white mb-1">
                Find Your Stay
              </h2>
              <p class="text-sm text-white mb-4" style="opacity: 0.85;">
                <%= needs_urgent_booking ? 'This adventure is coming up soon!' : 'Time to find the perfect place' %>
              </p>

              <% if days_until && days_until > 0 %>
                <!-- Countdown pill -->
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full" style="background-color: rgba(255,255,255,0.9);">
                  <span class="text-2xl font-bold <%= text_color %>"><%= days_until %></span>
                  <span class="text-sm <%= text_color %>">days until check-in</span>
                </div>
              <% end %>

              <!-- Arrow indicator -->
              <div class="absolute top-0 right-0">
                <div class="w-10 h-10 rounded-full flex items-center justify-center group-hover:scale-110 transition-all duration-300" style="background-color: rgba(255,255,255,0.3);">
                  <svg class="w-5 h-5 text-white group-hover:translate-x-0.5 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- Expected Weather -->
      <% if @weather.present? %>
        <%= link_to weather_stay_path(@stay), class: "block group" do %>
          <div class="relative overflow-hidden rounded-3xl shadow-cozy p-6 cursor-pointer
                      bg-gradient-to-br from-sky-50 via-white to-amber-50
                      border border-taupe-light
                      transition-all duration-300 ease-out
                      hover:shadow-xl hover:scale-[1.02]">
            <!-- Decorative sun -->
            <div class="absolute -top-4 -right-4 w-20 h-20 opacity-20">
              <svg viewBox="0 0 100 100" fill="currentColor" class="text-amber-400">
                <circle cx="50" cy="50" r="20"/>
                <g stroke="currentColor" stroke-width="4" fill="none">
                  <line x1="50" y1="5" x2="50" y2="20"/>
                  <line x1="50" y1="80" x2="50" y2="95"/>
                  <line x1="5" y1="50" x2="20" y2="50"/>
                  <line x1="80" y1="50" x2="95" y2="50"/>
                  <line x1="18" y1="18" x2="28" y2="28"/>
                  <line x1="72" y1="72" x2="82" y2="82"/>
                  <line x1="18" y1="82" x2="28" y2="72"/>
                  <line x1="72" y1="28" x2="82" y2="18"/>
                </g>
              </svg>
            </div>
            <!-- Decorative cloud -->
            <div class="absolute bottom-2 left-2 w-16 h-10 opacity-10">
              <svg viewBox="0 0 100 60" fill="currentColor" class="text-slate-400">
                <path d="M80 60H25c-13.8 0-25-11.2-25-25 0-12.4 9.1-22.7 21-24.5C23.5 4.5 31.5 0 40.5 0c12.4 0 23 8.4 26.1 20 1.1-.1 2.3-.2 3.4-.2 16.6 0 30 13.4 30 30S96.6 60 80 60z"/>
              </svg>
            </div>

            <!-- Header -->
            <div class="relative mb-4">
              <h2 class="text-lg font-semibold text-brown group-hover:text-sage-dark transition-colors">Expected Weather</h2>
              <p class="text-xs text-brown-light">for your dates</p>
            </div>

            <!-- Temperature Summary -->
            <div class="relative grid grid-cols-3 gap-2 mb-4">
              <div class="text-center p-3 rounded-2xl bg-white opacity-90">
                <p class="text-2xl font-bold text-sage-dark"><%= @weather[:low] %>°</p>
                <p class="text-xs text-brown-light">Low</p>
              </div>
              <div class="text-center p-3 rounded-2xl bg-white shadow-sm">
                <p class="text-2xl font-bold text-brown"><%= @weather[:average] %>°</p>
                <p class="text-xs text-brown-light">Avg</p>
              </div>
              <div class="text-center p-3 rounded-2xl bg-white opacity-90">
                <p class="text-2xl font-bold text-rose-dark"><%= @weather[:high] %>°</p>
                <p class="text-xs text-brown-light">High</p>
              </div>
            </div>

            <!-- Weather Conditions - Compact -->
            <div class="relative flex flex-wrap gap-2">
              <% @weather[:conditions].each do |condition, count| %>
                <div class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-white text-sm">
                  <span><%= weather_icon(condition) %></span>
                  <span class="text-brown-light">×<%= count %></span>
                </div>
              <% end %>
            </div>

            <!-- Footer hint -->
            <div class="relative mt-4 pt-3 border-t border-taupe-light flex items-center justify-between">
              <p class="text-xs text-taupe">Based on historical data</p>
              <svg class="w-4 h-4 text-brown-light group-hover:text-sage-dark group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- Price -->
      <% if @stay.price_total_cents.present? %>
        <div class="cozy-card p-6">
          <h2 class="text-lg font-semibold text-brown mb-2">Price</h2>
          <p class="text-2xl font-bold text-brown"><%= @stay.price_formatted %></p>
          <p class="text-sm text-brown-light">Total for <%= @stay.duration_days %> nights</p>
          <% if @stay.duration_days > 0 %>
            <p class="text-sm text-brown-light">
              (~<%= @stay.currency %> <%= (@stay.price_total_cents / @stay.duration_days / 100.0).round(2) %>/night)
            </p>
          <% end %>
        </div>
      <% end %>

      <!-- Quick Actions -->
      <div class="relative">
        <!-- Header (outside card) -->
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-full bg-gradient-to-br from-taupe-light to-taupe flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-semibold text-brown">Quick Actions</h2>
            <p class="text-xs text-brown-light">Explore your journey</p>
          </div>
        </div>

        <%= link_to map_path(focus: @stay.id), class: "group flex items-center gap-3 p-4 rounded-2xl bg-white shadow-cozy hover:shadow-cozy-lg hover:bg-sage-light border border-taupe-light hover:border-sage transition-all duration-200" do %>
          <div class="w-10 h-10 rounded-full bg-sage-light group-hover:bg-sage flex items-center justify-center transition-colors">
            <svg class="w-5 h-5 text-sage-dark group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="font-medium text-brown group-hover:text-sage-dark transition-colors">View on Map</p>
            <p class="text-xs text-brown-light">See what's nearby</p>
          </div>
          <svg class="w-5 h-5 text-taupe group-hover:text-sage-dark group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>

        <%= link_to stay_gallery_path(@stay), class: "group flex items-center gap-3 p-4 rounded-2xl bg-white shadow-cozy hover:shadow-cozy-lg hover:bg-lavender-light border border-taupe-light hover:border-lavender transition-all duration-200 mt-3" do %>
          <div class="w-10 h-10 rounded-full bg-lavender-light group-hover:bg-lavender flex items-center justify-center transition-colors">
            <svg class="w-5 h-5 text-lavender-dark group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="font-medium text-brown group-hover:text-lavender-dark transition-colors">View Gallery</p>
            <p class="text-xs text-brown-light">Explore destination</p>
          </div>
          <svg class="w-5 h-5 text-taupe group-hover:text-lavender-dark group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div class="mt-8 pt-8 border-t border-taupe-light">
    <%= link_to root_path, class: "text-sage-dark hover:text-sage inline-flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Dashboard
    <% end %>
  </div>
</div>
