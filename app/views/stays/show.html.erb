<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <div class="mb-6 alert-success p-4">
      <p class="text-sage-dark"><%= notice %></p>
    </div>
  <% end %>

  <!-- Hero Image -->
  <% if @stay.image_url.present? %>
    <div class="mb-8 rounded-3xl overflow-hidden shadow-cozy-lg warm-overlay">
      <img src="<%= @stay.image_url %>" alt="<%= @stay.title %>" class="w-full h-64 object-cover">
    </div>
  <% end %>

  <!-- Header -->
  <div class="mb-8 flex items-start justify-between">
    <div>
      <div class="flex items-center gap-3">
        <h1 class="text-3xl font-bold text-brown"><%= @stay.title %></h1>
        <% if @stay.booked? %>
          <span class="badge <%= case @stay.status
              when 'upcoming' then 'badge-upcoming'
              when 'current' then 'badge-current'
              when 'past' then 'badge-past'
              end %>">
            <%= @stay.status.capitalize %>
          </span>
        <% else %>
          <span class="badge badge-planned">
            Planned
          </span>
        <% end %>
      </div>
      <p class="mt-2 text-brown-light">
        <span class="inline-flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <%= [@stay.city, @stay.country].compact.join(', ') %>
        </span>
        <% if @stay.booked? && @stay.stay_type.present? %>
          <span class="mx-2 text-taupe">|</span>
          <span class="capitalize"><%= @stay.stay_type %></span>
        <% end %>
      </p>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_stay_path(@stay), class: "btn-outline" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit
      <% end %>
      <%= button_to stay_path(@stay), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn-outline border-rose text-rose-dark hover:bg-rose-light" do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        Delete
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Dates Card -->
      <div class="cozy-card p-6">
        <h2 class="text-lg font-semibold text-brown mb-4">Dates</h2>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <p class="text-sm text-brown-light">Check-in</p>
            <p class="text-lg font-medium text-brown"><%= @stay.check_in.strftime('%B %d, %Y') %></p>
          </div>
          <div>
            <p class="text-sm text-brown-light">Check-out</p>
            <p class="text-lg font-medium text-brown"><%= @stay.check_out.strftime('%B %d, %Y') %></p>
          </div>
        </div>
        <div class="mt-4 pt-4 border-t border-taupe-light">
          <div class="flex items-center justify-between">
            <span class="text-brown-light">Duration</span>
            <span class="font-medium text-brown"><%= @stay.duration_days %> nights</span>
          </div>
          <% if @stay.status == 'upcoming' && @stay.days_until_check_in.present? %>
            <div class="mt-2 flex items-center justify-between text-sage-dark">
              <span>Countdown</span>
              <span class="font-medium"><%= @stay.days_until_check_in %> days until check-in</span>
            </div>
          <% elsif @stay.status == 'current' && @stay.days_until_check_out.present? %>
            <div class="mt-2 flex items-center justify-between text-rose-dark">
              <span>Time remaining</span>
              <span class="font-medium"><%= @stay.days_until_check_out %> days until check-out</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Address & Mini Map -->
      <% if @stay.address.present? || @stay.latitude.present? %>
        <div class="cozy-card p-6">
          <h2 class="text-lg font-semibold text-brown mb-4">Location</h2>
          <% if @stay.address.present? %>
            <p class="text-brown mb-4"><%= @stay.full_address %></p>
          <% end %>
          <% if @stay.latitude.present? && @stay.longitude.present? %>
            <div id="mini-map" class="h-48 rounded-2xl"
                 data-controller="mini-map"
                 data-mini-map-lat-value="<%= @stay.latitude %>"
                 data-mini-map-lng-value="<%= @stay.longitude %>"
                 data-mini-map-title-value="<%= @stay.title %>">
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Notes -->
      <% if @stay.notes.present? %>
        <div class="cozy-card p-6">
          <h2 class="text-lg font-semibold text-brown mb-4">Notes</h2>
          <div class="prose prose-sm text-brown">
            <%= simple_format(@stay.notes) %>
          </div>
        </div>
      <% end %>

      <!-- Bucket List -->
      <%= render "bucket_list_items/section", stay: @stay %>

      <!-- POIs -->
      <% if @pois_by_category.any? %>
        <div class="cozy-card p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-brown">Nearby Points of Interest</h2>
            <%= link_to browse_stay_pois_path(@stay), class: "text-sage-dark hover:text-sage text-sm inline-flex items-center" do %>
              Browse all
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
          <div class="space-y-6">
            <% @pois_by_category.each do |category, pois| %>
              <div>
                <h3 class="text-sm font-medium text-brown-light uppercase tracking-wide mb-2">
                  <%= category.titleize.gsub('_', ' ') %>
                </h3>
                <ul class="space-y-2">
                  <% pois.sort_by(&:distance_meters).first(5).each do |poi| %>
                    <li class="flex items-center justify-between py-2 border-b border-taupe-light last:border-0">
                      <div class="flex items-center gap-2">
                        <%= button_to stay_bucket_list_items_path(@stay),
                                      method: :post,
                                      params: { bucket_list_item: { title: poi.name, address: poi.address } },
                                      class: "w-6 h-6 flex items-center justify-center rounded-full bg-sage-light hover:bg-sage hover:scale-110 hover:shadow-md text-sage-dark hover:text-white transition-all duration-200 cursor-pointer",
                                      title: "Add to bucket list" do %>
                          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                          </svg>
                        <% end %>
                        <span class="text-brown"><%= poi.name || 'Unnamed' %></span>
                      </div>
                      <span class="text-sm text-brown-light"><%= poi.distance_meters %>m</span>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Booking Status -->
      <% if @stay.booked? %>
        <% if @stay.booking_url.present? %>
          <div class="cozy-card p-6">
            <h2 class="text-lg font-semibold text-brown mb-4">Booking</h2>
            <%= link_to @stay.booking_url, target: "_blank", rel: "noopener", class: "btn-primary w-full justify-center" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              View Booking
            <% end %>
          </div>
        <% end %>
      <% else %>
        <% days_until = @stay.days_until_check_in %>
        <% needs_urgent_booking = @stay.needs_booking_alert? %>
        <div class="<%= needs_urgent_booking ? 'bg-coral-light border-coral' : 'bg-lavender-light border-lavender' %> border rounded-3xl shadow-cozy p-6">
          <h2 class="text-lg font-semibold <%= needs_urgent_booking ? 'text-coral-dark' : 'text-lavender-dark' %> mb-2">Not Yet Booked</h2>
          <% if days_until && days_until > 0 %>
            <p class="text-sm <%= needs_urgent_booking ? 'text-coral-dark font-medium' : 'text-lavender-dark' %> mb-2">
              <strong><%= days_until %> days</strong> until check-in
            </p>
          <% end %>
          <% if needs_urgent_booking %>
            <p class="text-sm text-coral-dark mb-4">This stay is coming up soon! Make sure to book accommodation.</p>
          <% else %>
            <p class="text-sm text-lavender-dark mb-4">This stay is planned but doesn't have accommodation booked yet.</p>
          <% end %>
          <%= link_to edit_stay_path(@stay), class: "btn-secondary w-full justify-center #{needs_urgent_booking ? 'bg-coral hover:bg-coral-dark' : 'bg-lavender hover:bg-lavender-dark'}" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Book This Stay
          <% end %>
        </div>
      <% end %>

      <!-- Expected Weather -->
      <% if @weather.present? %>
        <div class="cozy-card p-6">
          <h2 class="text-lg font-semibold text-brown mb-4">Expected Weather</h2>

          <!-- Temperature Summary -->
          <div class="grid grid-cols-3 gap-4 mb-4">
            <div class="text-center">
              <p class="text-sm text-brown-light">Low</p>
              <p class="text-2xl font-bold text-sage-dark"><%= @weather[:low] %>°</p>
            </div>
            <div class="text-center">
              <p class="text-sm text-brown-light">Average</p>
              <p class="text-2xl font-bold text-brown"><%= @weather[:average] %>°</p>
            </div>
            <div class="text-center">
              <p class="text-sm text-brown-light">High</p>
              <p class="text-2xl font-bold text-rose-dark"><%= @weather[:high] %>°</p>
            </div>
          </div>

          <!-- Weather Conditions -->
          <div class="pt-4 border-t border-taupe-light">
            <p class="text-sm text-brown-light mb-3">Conditions to expect</p>
            <ul class="space-y-2">
              <% @weather[:conditions].each do |condition, count| %>
                <li class="flex items-center justify-between py-2 border-b border-taupe-light last:border-0">
                  <div class="flex items-center gap-3">
                    <span class="text-2xl"><%= weather_icon(condition) %></span>
                    <span class="text-brown font-medium"><%= condition %></span>
                  </div>
                  <span class="text-brown-light">×<%= count %></span>
                </li>
              <% end %>
            </ul>
          </div>

          <div class="mt-4 pt-4 border-t border-taupe-light">
            <%= link_to weather_stay_path(@stay), class: "text-sage-dark hover:text-sage text-sm inline-flex items-center" do %>
              View detailed forecast
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>

          <p class="mt-3 text-xs text-taupe">Based on historical weather data from previous years</p>
        </div>
      <% end %>

      <!-- Price -->
      <% if @stay.price_total_cents.present? %>
        <div class="cozy-card p-6">
          <h2 class="text-lg font-semibold text-brown mb-2">Price</h2>
          <p class="text-2xl font-bold text-brown"><%= @stay.price_formatted %></p>
          <p class="text-sm text-brown-light">Total for <%= @stay.duration_days %> nights</p>
          <% if @stay.duration_days > 0 %>
            <p class="text-sm text-brown-light">
              (~<%= @stay.currency %> <%= (@stay.price_total_cents / @stay.duration_days / 100.0).round(2) %>/night)
            </p>
          <% end %>
        </div>
      <% end %>

      <!-- Quick Actions -->
      <div class="cozy-card p-6">
        <h2 class="text-lg font-semibold text-brown mb-4">Actions</h2>
        <div class="space-y-2">
          <%= link_to map_path, class: "btn-outline w-full justify-center" do %>
            View on Map
          <% end %>
          <%= link_to timeline_path, class: "btn-outline w-full justify-center" do %>
            View Timeline
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div class="mt-8 pt-8 border-t border-taupe-light">
    <%= link_to root_path, class: "text-sage-dark hover:text-sage inline-flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Dashboard
    <% end %>
  </div>
</div>
