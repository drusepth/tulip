<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Hero Image -->
  <% if @stay.image_url.present? %>
    <div class="mb-8 rounded-3xl overflow-hidden shadow-cozy-lg warm-overlay">
      <img src="<%= @stay.image_url %>" alt="<%= @stay.title %>" class="w-full h-64 object-cover">
    </div>
  <% end %>

  <!-- Header -->
  <div class="mb-8 flex items-start justify-between">
    <div>
      <div class="flex items-center gap-3 flex-wrap">
        <h1 class="text-3xl font-bold text-brown"><%= @stay.title %></h1>
        <% if @stay.booked? %>
          <span class="badge <%= case @stay.status
              when 'upcoming' then 'badge-upcoming'
              when 'current' then 'badge-current'
              when 'past' then 'badge-past'
              end %>">
            <%= @stay.status.capitalize %>
          </span>
        <% else %>
          <span class="badge badge-planned">
            Planned
          </span>
        <% end %>
        <% unless @is_owner %>
          <span class="badge bg-lavender-light text-lavender-dark border border-lavender">
            <svg class="w-3 h-3 mr-1 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Shared with you
          </span>
        <% end %>
      </div>
      <p class="mt-2 text-brown-light">
        <span class="inline-flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <%= [@stay.city, @stay.country].compact.join(', ') %>
        </span>
        <% if @stay.booked? && @stay.stay_type.present? %>
          <span class="mx-2 text-taupe">|</span>
          <span class="capitalize"><%= @stay.stay_type %></span>
        <% end %>
        <% if @stay.collaborator_count > 0 %>
          <span class="mx-2 text-taupe">|</span>
          <span class="text-lavender-dark">
            <svg class="w-4 h-4 mr-1 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <%= @stay.collaborator_count %> <%= 'collaborator'.pluralize(@stay.collaborator_count) %>
          </span>
        <% end %>
      </p>
    </div>
    <div class="flex gap-2 flex-wrap">
      <% if @can_edit %>
        <%= link_to edit_stay_path(@stay), class: "btn-outline" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>
      <% end %>
      <% if @is_owner %>
        <%= link_to stay_collaborations_path(@stay), class: "btn-outline" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
          </svg>
          Share
        <% end %>
        <%= button_to stay_path(@stay), method: :delete, data: { turbo_confirm: "Are you sure? This will also remove access for all collaborators." }, class: "btn-outline border-rose text-rose-dark hover:bg-rose-light" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      <% else %>
        <%= button_to leave_stay_collaborations_path(@stay), method: :delete, data: { turbo_confirm: "Leave this stay? You'll need a new invite link to rejoin." }, class: "btn-outline border-rose text-rose-dark hover:bg-rose-light" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          Leave
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Dates Card -->
      <div class="cozy-card p-5">
        <div class="flex items-center gap-2 mb-4">
          <svg class="w-5 h-5 text-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <h2 class="text-lg font-semibold text-brown">Dates</h2>
        </div>

        <!-- Compact Timeline -->
        <div class="flex items-center gap-3">
          <!-- Check-in date -->
          <div class="flex items-center gap-2">
            <div class="w-3 h-3 rounded-full bg-sage border border-sage-dark"></div>
            <div>
              <p class="text-sm font-semibold text-brown leading-tight"><%= @stay.check_in.strftime('%b %d') %></p>
              <p class="text-xs text-brown-light"><%= @stay.check_in.strftime('%Y') %></p>
            </div>
          </div>

          <!-- Connecting line with duration -->
          <div class="flex-1 flex items-center">
            <div class="flex-1 border-t-2 border-dashed border-taupe"></div>
            <div class="mx-2 px-2 py-0.5 bg-cream rounded-full border border-taupe text-xs">
              <span class="font-semibold text-brown"><%= @stay.duration_days %></span>
              <span class="text-brown-light ml-0.5">nights</span>
            </div>
            <div class="flex-1 border-t-2 border-dashed border-taupe"></div>
          </div>

          <!-- Check-out date -->
          <div class="flex items-center gap-2">
            <div>
              <p class="text-sm font-semibold text-brown leading-tight"><%= @stay.check_out.strftime('%b %d') %></p>
              <p class="text-xs text-brown-light"><%= @stay.check_out.strftime('%Y') %></p>
            </div>
            <div class="w-3 h-3 rounded-full bg-rose border border-rose-dark"></div>
          </div>
        </div>

        <!-- Countdown -->
        <% if @stay.status == 'upcoming' && @stay.days_until_check_in.present? %>
          <div class="flex items-center justify-center gap-2 mt-3 py-2 bg-sage rounded-lg">
            <svg class="w-5 h-5 text-cream" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
            <span class="text-lg font-bold text-white"><%= @stay.days_until_check_in %> days</span>
            <span class="text-sm text-cream">to go!</span>
          </div>
        <% elsif @stay.status == 'current' && @stay.days_until_check_out.present? %>
          <div class="flex items-center justify-center gap-2 mt-3 py-2 bg-rose rounded-lg">
            <svg class="w-5 h-5 text-cream" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
            <span class="text-lg font-bold text-white"><%= @stay.days_until_check_out %> days</span>
            <span class="text-sm text-cream">left to enjoy!</span>
          </div>
        <% end %>
      </div>

      <!-- Notes -->
      <%= render "stays/notes_section", stay: @stay %>

      <!-- Bucket List -->
      <%= render "bucket_list_items/section", stay: @stay %>

      <!-- POIs -->
      <% if @pois_by_category.any? %>
        <div class="cozy-card p-6">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-brown">Nearby Points of Interest</h2>
            <%= link_to browse_stay_pois_path(@stay), class: "text-sage-dark hover:text-sage text-sm inline-flex items-center" do %>
              Browse all
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
          <div class="space-y-6">
            <% @pois_by_category.each do |category, pois| %>
              <div>
                <h3 class="text-sm font-medium text-brown-light uppercase tracking-wide mb-2">
                  <%= category.titleize.gsub('_', ' ') %>
                </h3>
                <ul class="space-y-2">
                  <% pois.sort_by(&:distance_meters).first(5).each do |poi| %>
                    <%= turbo_frame_tag dom_id(poi) do %>
                      <li class="flex items-center justify-between py-2 border-b border-taupe-light last:border-0">
                        <div class="flex items-center gap-2 min-w-0 flex-1">
                          <%= button_to stay_bucket_list_items_path(@stay),
                                        method: :post,
                                        params: { bucket_list_item: { title: poi.name, address: poi.address }, source_poi_id: poi.id, compact: true },
                                        class: "w-6 h-6 flex-shrink-0 flex items-center justify-center rounded-full bg-sage-light hover:bg-sage hover:scale-110 hover:shadow-md text-sage-dark hover:text-white transition-all duration-200 cursor-pointer",
                                        title: "Add to bucket list",
                                        data: {
                                          controller: "loading-button",
                                          action: "click->loading-button#start"
                                        } do %>
                            <svg data-loading-button-target="icon" class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                            </svg>
                            <svg data-loading-button-target="spinner" class="hidden w-3 h-3 animate-spin" fill="none" viewBox="0 0 24 24">
                              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                          <% end %>
                          <div class="min-w-0">
                            <%= link_to stay_poi_path(@stay, poi), class: "text-brown hover:text-sage-dark transition-colors", data: { turbo_frame: "_top" } do %>
                              <%= poi.name || 'Unnamed' %>
                            <% end %>
                            <% if poi.cuisine.present? %>
                              <p class="text-xs text-brown-light truncate"><%= truncate(poi.cuisine.gsub(';', ', ').titleize, length: 60) %></p>
                            <% end %>
                          </div>
                        </div>
                        <span class="text-sm text-brown-light flex-shrink-0 ml-2"><%= format_distance(poi.distance_meters) %></span>
                      </li>
                    <% end %>
                  <% end %>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Address & Mini Map (only shown for booked stays with address) -->
      <% if @stay.booked? && @stay.address.present? %>
        <div class="relative overflow-hidden cozy-card p-6">
          <!-- Decorative corner flourish -->
          <div class="absolute top-0 right-0 w-20 h-20 opacity-5">
            <svg viewBox="0 0 100 100" fill="currentColor" class="text-rose-dark">
              <path d="M100 0 Q60 10, 50 50 Q40 90, 0 100 L100 100 Z"/>
            </svg>
          </div>

          <!-- Header -->
          <div class="relative flex items-start justify-between mb-5">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-rose-light to-rose flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h2 class="text-lg font-semibold text-brown">Location</h2>
                <p class="text-xs text-brown-light">Where you'll be staying</p>
              </div>
            </div>
            <%= link_to map_path, class: "inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium text-rose-dark hover:bg-rose-light transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
              View Map
            <% end %>
          </div>

          <p class="relative text-brown mb-4"><%= @stay.full_address %></p>
          <% if @stay.latitude.present? && @stay.longitude.present? %>
            <div id="mini-map" class="relative h-48 rounded-2xl"
                 data-controller="mini-map"
                 data-mini-map-lat-value="<%= @stay.latitude %>"
                 data-mini-map-lng-value="<%= @stay.longitude %>"
                 data-mini-map-title-value="<%= @stay.title %>">
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Booking Status -->
      <% if @stay.booked? %>
        <% if @stay.booking_url.present? %>
          <%= link_to @stay.booking_url, target: "_blank", rel: "noopener", class: "block group" do %>
            <div class="relative overflow-hidden rounded-3xl shadow-cozy p-6 cursor-pointer
                        bg-gradient-to-br from-sage-light via-white to-rose-light
                        border-2 border-sage
                        transition-all duration-300 ease-out
                        hover:shadow-xl hover:scale-[1.02] hover:border-sage">
              <!-- Decorative elements -->
              <div class="absolute top-0 right-0 w-24 h-24 opacity-10 transform translate-x-8 -translate-y-8">
                <svg viewBox="0 0 100 100" fill="currentColor" class="text-sage-dark">
                  <path d="M50 5 C60 20, 80 20, 80 40 C80 60, 60 70, 50 95 C40 70, 20 60, 20 40 C20 20, 40 20, 50 5Z"/>
                </svg>
              </div>
              <div class="absolute bottom-0 left-0 w-16 h-16 opacity-10 transform -translate-x-4 translate-y-4">
                <svg viewBox="0 0 100 100" fill="currentColor" class="text-rose">
                  <path d="M50 5 C60 20, 80 20, 80 40 C80 60, 60 70, 50 95 C40 70, 20 60, 20 40 C20 20, 40 20, 50 5Z"/>
                </svg>
              </div>

              <div class="relative flex items-center justify-between">
                <div>
                  <div class="flex items-center gap-2 mb-1">
                    <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-sage-light">
                      <svg class="w-4 h-4 text-sage-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </span>
                    <span class="text-xs font-medium text-sage-dark uppercase tracking-wide">Confirmed</span>
                  </div>
                  <h2 class="text-lg font-semibold text-brown group-hover:text-sage-dark transition-colors">View Booking</h2>
                  <p class="text-sm text-brown-light">Open reservation details</p>
                </div>
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 rounded-full bg-white shadow-sm flex items-center justify-center group-hover:bg-sage group-hover:shadow-md transition-all duration-300">
                    <svg class="w-5 h-5 text-sage-dark group-hover:text-white group-hover:translate-x-0.5 group-hover:-translate-y-0.5 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <% days_until = @stay.days_until_check_in %>
        <% needs_urgent_booking = @stay.needs_booking_alert? %>
        <% card_gradient = needs_urgent_booking ? 'from-coral to-rose' : 'from-lavender to-lavender-dark' %>
        <% text_color = needs_urgent_booking ? 'text-coral-dark' : 'text-lavender-dark' %>
        <%= link_to edit_stay_path(@stay), class: "block group" do %>
          <div class="relative overflow-hidden rounded-3xl shadow-cozy p-6 cursor-pointer bg-gradient-to-br <%= card_gradient %> transition-all duration-300 ease-out hover:shadow-xl hover:scale-[1.02] hover:brightness-105">
            <!-- Decorative elements -->
            <div class="absolute top-0 right-0 w-24 h-24 opacity-20 transform translate-x-8 -translate-y-8">
              <svg viewBox="0 0 100 100" fill="currentColor" class="text-white">
                <path d="M50 10 Q65 25, 65 45 Q65 65, 50 80 Q35 65, 35 45 Q35 25, 50 10 Z"/>
                <path d="M30 30 Q45 35, 50 50 Q45 55, 30 50 Q25 40, 30 30 Z" opacity="0.6"/>
                <path d="M70 30 Q55 35, 50 50 Q55 55, 70 50 Q75 40, 70 30 Z" opacity="0.6"/>
              </svg>
            </div>
            <div class="absolute bottom-0 left-0 w-20 h-20 opacity-15 transform -translate-x-6 translate-y-6">
              <svg viewBox="0 0 100 100" fill="currentColor" class="text-white">
                <circle cx="50" cy="50" r="35"/>
                <circle cx="50" cy="50" r="20" opacity="0.5"/>
              </svg>
            </div>

            <div class="relative">
              <!-- Status indicator -->
              <div class="flex items-center gap-2 mb-3">
                <span class="inline-flex items-center justify-center w-8 h-8 rounded-full" style="background-color: rgba(255,255,255,0.3);">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </span>
                <span class="text-xs font-medium text-white uppercase tracking-wide">
                  <%= needs_urgent_booking ? 'Book Soon' : 'Planned' %>
                </span>
              </div>

              <!-- Main content -->
              <h2 class="text-xl font-semibold text-white mb-1">
                Find Your Stay
              </h2>
              <p class="text-sm text-white mb-4" style="opacity: 0.85;">
                <%= needs_urgent_booking ? 'This adventure is coming up soon!' : 'Time to find the perfect place' %>
              </p>

              <% if days_until && days_until > 0 %>
                <!-- Countdown pill -->
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full" style="background-color: rgba(255,255,255,0.9);">
                  <span class="text-2xl font-bold <%= text_color %>"><%= days_until %></span>
                  <span class="text-sm <%= text_color %>">days until check-in</span>
                </div>
              <% end %>

              <!-- Arrow indicator -->
              <div class="absolute top-0 right-0">
                <div class="w-10 h-10 rounded-full flex items-center justify-center group-hover:scale-110 transition-all duration-300" style="background-color: rgba(255,255,255,0.3);">
                  <svg class="w-5 h-5 text-white group-hover:translate-x-0.5 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- Expected Weather -->
      <% if @weather.present? %>
        <%= link_to weather_stay_path(@stay), class: "block group" do %>
          <div class="relative overflow-hidden rounded-3xl shadow-cozy p-6 cursor-pointer
                      bg-gradient-to-br from-sky-50 via-white to-amber-50
                      border border-taupe-light
                      transition-all duration-300 ease-out
                      hover:shadow-xl hover:scale-[1.02]">
            <!-- Decorative sun -->
            <div class="absolute -top-4 -right-4 w-20 h-20 opacity-20">
              <svg viewBox="0 0 100 100" fill="currentColor" class="text-amber-400">
                <circle cx="50" cy="50" r="20"/>
                <g stroke="currentColor" stroke-width="4" fill="none">
                  <line x1="50" y1="5" x2="50" y2="20"/>
                  <line x1="50" y1="80" x2="50" y2="95"/>
                  <line x1="5" y1="50" x2="20" y2="50"/>
                  <line x1="80" y1="50" x2="95" y2="50"/>
                  <line x1="18" y1="18" x2="28" y2="28"/>
                  <line x1="72" y1="72" x2="82" y2="82"/>
                  <line x1="18" y1="82" x2="28" y2="72"/>
                  <line x1="72" y1="28" x2="82" y2="18"/>
                </g>
              </svg>
            </div>
            <!-- Decorative cloud -->
            <div class="absolute bottom-2 left-2 w-16 h-10 opacity-10">
              <svg viewBox="0 0 100 60" fill="currentColor" class="text-slate-400">
                <path d="M80 60H25c-13.8 0-25-11.2-25-25 0-12.4 9.1-22.7 21-24.5C23.5 4.5 31.5 0 40.5 0c12.4 0 23 8.4 26.1 20 1.1-.1 2.3-.2 3.4-.2 16.6 0 30 13.4 30 30S96.6 60 80 60z"/>
              </svg>
            </div>

            <!-- Header -->
            <div class="relative mb-4">
              <h2 class="text-lg font-semibold text-brown group-hover:text-sage-dark transition-colors">Expected Weather</h2>
              <p class="text-xs text-brown-light">for your dates</p>
            </div>

            <!-- Temperature Summary -->
            <div class="relative grid grid-cols-3 gap-2 mb-4">
              <div class="text-center p-3 rounded-2xl bg-white opacity-90">
                <p class="text-2xl font-bold text-sage-dark"><%= @weather[:low] %>°</p>
                <p class="text-xs text-brown-light">Low</p>
              </div>
              <div class="text-center p-3 rounded-2xl bg-white shadow-sm">
                <p class="text-2xl font-bold text-brown"><%= @weather[:average] %>°</p>
                <p class="text-xs text-brown-light">Avg</p>
              </div>
              <div class="text-center p-3 rounded-2xl bg-white opacity-90">
                <p class="text-2xl font-bold text-rose-dark"><%= @weather[:high] %>°</p>
                <p class="text-xs text-brown-light">High</p>
              </div>
            </div>

            <!-- Weather Conditions - Compact -->
            <div class="relative flex flex-wrap gap-2">
              <% @weather[:conditions].each do |condition, count| %>
                <div class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-white text-sm">
                  <span><%= weather_icon(condition) %></span>
                  <span class="text-brown-light">×<%= count %></span>
                </div>
              <% end %>
            </div>

            <!-- Footer hint -->
            <div class="relative mt-4 pt-3 border-t border-taupe-light flex items-center justify-between">
              <p class="text-xs text-taupe">Based on historical data</p>
              <svg class="w-4 h-4 text-brown-light group-hover:text-sage-dark group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- Price -->
      <% if @stay.price_total_cents.present? %>
        <div class="cozy-card p-6">
          <h2 class="text-lg font-semibold text-brown mb-2">Price</h2>
          <p class="text-2xl font-bold text-brown"><%= @stay.price_formatted %></p>
          <p class="text-sm text-brown-light">Total for <%= @stay.duration_days %> nights</p>
          <% if @stay.duration_days > 0 %>
            <p class="text-sm text-brown-light">
              (~<%= @stay.currency %> <%= (@stay.price_total_cents / @stay.duration_days / 100.0).round(2) %>/night)
            </p>
          <% end %>
        </div>
      <% end %>

      <!-- Quick Actions -->
      <div class="relative">
        <!-- Header (outside card) -->
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 rounded-full bg-gradient-to-br from-taupe-light to-taupe flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <div>
            <h2 class="text-lg font-semibold text-brown">Quick Actions</h2>
            <p class="text-xs text-brown-light">Explore your journey</p>
          </div>
        </div>

        <%= link_to map_path, class: "group flex items-center gap-3 p-4 rounded-2xl bg-white shadow-cozy hover:shadow-cozy-lg hover:bg-sage-light border border-taupe-light hover:border-sage transition-all duration-200" do %>
          <div class="w-10 h-10 rounded-full bg-sage-light group-hover:bg-sage flex items-center justify-center transition-colors">
            <svg class="w-5 h-5 text-sage-dark group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
            </svg>
          </div>
          <div class="flex-1">
            <p class="font-medium text-brown group-hover:text-sage-dark transition-colors">View on Map</p>
            <p class="text-xs text-brown-light">See all your stays</p>
          </div>
          <svg class="w-5 h-5 text-taupe group-hover:text-sage-dark group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div class="mt-8 pt-8 border-t border-taupe-light">
    <%= link_to root_path, class: "text-sage-dark hover:text-sage inline-flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Dashboard
    <% end %>
  </div>
</div>
