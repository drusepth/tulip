<%= turbo_frame_tag "venue-card-#{venue['fsq_id']}" do %>
  <div class="group relative rounded-2xl overflow-hidden shadow-cozy hover:shadow-cozy-lg transition-all duration-300 hover:-translate-y-1 bg-cream">
    <!-- Image Container - links to Foursquare page for attribution -->
    <a href="https://foursquare.com/v/<%= venue['fsq_id'] %>" target="_blank" rel="noopener" class="block aspect-square overflow-hidden">
      <% if venue['thumb_url'].present? %>
        <img
          src="<%= venue['thumb_url'] %>"
          alt="<%= venue['name'] %>"
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        >
      <% else %>
        <div class="w-full h-full bg-taupe-light flex items-center justify-center">
          <svg class="w-12 h-12 text-taupe" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </div>
      <% end %>
    </a>

    <!-- Category Badge -->
    <div class="absolute top-2 left-2">
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-white shadow-sm text-brown">
        <%= venue['category'] %>
      </span>
    </div>

    <!-- Rating and Price -->
    <div class="absolute top-2 right-2 flex items-center gap-1.5">
      <% if venue['rating'].present? && venue['rating'].to_f > 0 %>
        <%
          rating_value = venue['rating'].to_f
          rating_color = if rating_value >= 8
            'bg-sage text-white'
          else
            'bg-white text-brown'
          end
        %>
        <span class="inline-flex items-center px-1.5 py-0.5 rounded-md text-xs font-semibold shadow-sm <%= rating_color %>">
          <%= '%.1f' % rating_value %>
        </span>
      <% end %>

      <% if venue['price'].present? && venue['price'].to_i > 0 %>
        <span class="inline-flex items-center px-1.5 py-0.5 rounded-md text-xs font-medium bg-white shadow-sm text-brown">
          <%= '$' * venue['price'].to_i %>
        </span>
      <% end %>
    </div>

    <!-- Venue Info Overlay -->
    <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black to-transparent p-3 pt-10">
      <h3 class="text-sm font-semibold truncate mb-1" style="color: #ffffff;"><%= venue['name'] %></h3>
      <% if venue['address'].present? %>
        <p class="text-xs truncate" style="color: rgba(255, 255, 255, 0.8);"><%= venue['address'] %></p>
      <% end %>
    </div>

    <!-- Add to Bucket List Button -->
    <div class="absolute inset-x-0 bottom-0 p-3 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
      <% if added %>
        <div class="w-full px-3 py-2 rounded-lg bg-sage text-white text-sm font-medium text-center flex items-center justify-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Added to Bucket List
        </div>
      <% else %>
        <%= button_to add_to_bucket_list_stay_gallery_path(@stay, fsq_id: venue['fsq_id']), method: :post, class: "w-full px-3 py-2 rounded-lg bg-rose hover:bg-rose-dark text-white text-sm font-medium text-center flex items-center justify-center gap-1 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add to Bucket List
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
