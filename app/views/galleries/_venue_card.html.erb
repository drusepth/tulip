<%= turbo_frame_tag "venue-card-#{poi.id}", data: { gallery_filter_target: "card", category: poi.category } do %>
  <div class="group relative rounded-2xl overflow-hidden shadow-cozy hover:shadow-cozy-lg transition-all duration-300 hover:-translate-y-1 bg-cream">
    <!-- Image Container -->
    <div class="block aspect-square overflow-hidden">
      <% if poi.foursquare_photo_url.present? %>
        <img
          src="<%= poi.foursquare_photo_url %>"
          alt="<%= poi.name %>"
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        >
      <% else %>
        <div class="w-full h-full flex items-center justify-center <%= category_background_class(poi.category) %>">
          <%= category_icon(poi.category, size: "w-16 h-16 text-white opacity-80") %>
        </div>
      <% end %>
    </div>

    <!-- Category Badge -->
    <div class="absolute top-2 left-2">
      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-white shadow-sm text-brown">
        <%= poi.category.titleize %>
      </span>
    </div>

    <!-- Rating and Price -->
    <div class="absolute top-2 right-2 flex items-center gap-1.5">
      <% if poi.foursquare_rating.present? && poi.foursquare_rating > 0 %>
        <%
          rating_value = poi.foursquare_rating.to_f
          rating_color = if rating_value >= 8
            'bg-sage text-white'
          else
            'bg-white text-brown'
          end
        %>
        <span class="inline-flex items-center px-1.5 py-0.5 rounded-md text-xs font-semibold shadow-sm <%= rating_color %>">
          <%= '%.1f' % rating_value %>
        </span>
      <% end %>

      <% if poi.foursquare_price.present? && poi.foursquare_price > 0 %>
        <span class="inline-flex items-center px-1.5 py-0.5 rounded-md text-xs font-medium bg-white shadow-sm text-brown">
          <%= '$' * poi.foursquare_price %>
        </span>
      <% end %>
    </div>

    <!-- Venue Info Overlay -->
    <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black to-transparent p-3 pt-10">
      <div class="flex items-start justify-between gap-2">
        <div class="min-w-0 flex-1">
          <h3 class="text-sm font-semibold truncate mb-1" style="color: #ffffff;"><%= poi.name %></h3>
          <% if poi.address.present? %>
            <p class="text-xs truncate" style="color: rgba(255, 255, 255, 0.8);"><%= poi.address %></p>
          <% end %>
        </div>
        <% if poi.distance_meters.present? %>
          <span class="flex-shrink-0 inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-cream text-brown-light shadow-sm">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
            </svg>
            <%= format_distance(poi.distance_meters) %>
          </span>
        <% end %>
      </div>
    </div>

    <!-- Add to Bucket List Button -->
    <div class="absolute inset-x-0 bottom-0 p-3 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
      <% if added %>
        <div class="w-full px-3 py-2 rounded-lg bg-sage text-white text-sm font-medium text-center flex items-center justify-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Added to Bucket List
        </div>
      <% else %>
        <%= button_to add_to_bucket_list_stay_gallery_path(@stay, poi_id: poi.id), method: :post, class: "w-full px-3 py-2 rounded-lg bg-rose hover:bg-rose-dark text-white text-sm font-medium text-center flex items-center justify-center gap-1 transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add to Bucket List
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
