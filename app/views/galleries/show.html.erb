<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <div class="flex items-center gap-3 mb-2">
          <div class="w-10 h-10 rounded-full bg-gradient-to-br from-lavender-light to-lavender flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-brown">Destination Gallery</h1>
            <p class="text-brown-light"><%= @stay.city.present? ? @stay.city : @stay.title %></p>
          </div>
        </div>
      </div>
      <div class="flex gap-2">
        <%= button_to refresh_stay_gallery_path(@stay), method: :post, class: "btn-outline", data: { turbo_confirm: "Refresh the gallery with new images?" } do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Refresh
        <% end %>
        <%= link_to stay_path(@stay), class: "btn-outline" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Stay
        <% end %>
      </div>
    </div>
  </div>

  <% if @images.any? %>
    <!-- Image Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <% @images.each_with_index do |image, index| %>
        <div class="group relative rounded-2xl overflow-hidden shadow-cozy hover:shadow-cozy-lg transition-all duration-300 hover:-translate-y-1 bg-white">
          <!-- Image Container -->
          <a href="<%= image['url'] %>" target="_blank" rel="noopener" class="block aspect-square overflow-hidden">
            <img
              src="<%= image['thumb_url'] %>"
              alt="<%= image['title']&.gsub('File:', '') %>"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
              loading="lazy"
            >
          </a>

          <!-- Overlay with attribution -->
          <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black to-transparent p-3 pt-8 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <p class="text-xs text-white truncate" title="<%= image['attribution'] %>">
              <%= image['attribution'] %>
            </p>
          </div>

          <!-- View full size indicator -->
          <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="w-8 h-8 rounded-full bg-white shadow-md flex items-center justify-center">
              <svg class="w-4 h-4 text-brown" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Attribution notice -->
    <div class="mt-8 p-4 rounded-2xl bg-cream border border-taupe-light">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-taupe flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div>
          <p class="text-sm text-brown-light">
            Images provided by <a href="https://commons.wikimedia.org" target="_blank" rel="noopener" class="text-sage-dark hover:underline">Wikimedia Commons</a>.
            Individual image licenses and attributions are shown on hover. Click any image to view the full-size version.
          </p>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="cozy-card p-12 text-center">
      <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-lavender-light flex items-center justify-center">
        <svg class="w-10 h-10 text-lavender-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
      <h2 class="text-xl font-semibold text-brown mb-2">No Photos Found</h2>
      <% if @stay.latitude.blank? || @stay.longitude.blank? %>
        <p class="text-brown-light mb-4">
          This stay doesn't have location coordinates yet. Add an address to the stay to discover photos of your destination.
        </p>
        <% if @stay.user == current_user %>
          <%= link_to edit_stay_path(@stay), class: "btn-primary inline-flex items-center" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Stay
          <% end %>
        <% end %>
      <% else %>
        <p class="text-brown-light mb-4">
          We couldn't find any photos near this location on Wikimedia Commons. This sometimes happens for less-photographed areas.
        </p>
        <%= button_to refresh_stay_gallery_path(@stay), method: :post, class: "btn-primary inline-flex items-center" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          Try Again
        <% end %>
      <% end %>
    </div>
  <% end %>

  <!-- Back Link -->
  <div class="mt-8 pt-8 border-t border-taupe-light">
    <%= link_to stay_path(@stay), class: "text-sage-dark hover:text-sage inline-flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to <%= @stay.title %>
    <% end %>
  </div>
</div>
