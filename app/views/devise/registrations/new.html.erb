<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <div class="flex items-center justify-center gap-3 mb-4">
        <svg class="w-10 h-10 text-rose" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C9 5 7 8 7 11c0 2.5 1.5 4 3 5-2 0-4 1.5-5 3.5 2.5-1 4.5-.5 6.5.5-1 2-.5 4 .5 6 1-2 2-4 4-5 2 1 3 3 4 5 1-2 1.5-4 .5-6 2-1 4-1.5 6.5-.5-1-2-3-3.5-5-3.5 1.5-1 3-2.5 3-5 0-3-2-6-5-9z"/>
        </svg>
        <h1 class="text-3xl font-bold" style="font-family: var(--font-heading);">Tulip</h1>
      </div>
      <h2 class="text-xl text-brown-light">Create your account</h2>
      <p class="text-sm text-brown-lighter mt-2">Start planning your travels</p>
    </div>

    <div class="cozy-card p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="space-y-5">
          <div>
            <label class="cozy-label" for="user_email">Email</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "cozy-input", placeholder: "you@example.com" %>
          </div>

          <div>
            <label class="cozy-label" for="user_password">Password</label>
            <% if @minimum_password_length %>
              <p class="text-xs text-brown-lighter mb-2"><%= @minimum_password_length %> characters minimum</p>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "cozy-input", placeholder: "Create a password" %>
          </div>

          <div>
            <label class="cozy-label" for="user_password_confirmation">Confirm password</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "cozy-input", placeholder: "Confirm your password" %>
          </div>

          <div class="pt-2">
            <%= f.submit "Sign up", class: "btn-primary w-full py-3" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6 pt-6 border-t border-taupe-light">
        <div class="flex flex-col items-center gap-3 text-sm">
          <p class="text-brown-light">
            Already have an account?
            <%= link_to "Log in", new_session_path(resource_name), class: "text-sage-dark font-medium hover:text-sage transition-colors" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
