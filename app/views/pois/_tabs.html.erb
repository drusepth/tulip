<div id="poi_tabs" class="cozy-card p-4 mb-6 relative overflow-hidden" data-controller="poi-tabs">
  <!-- Decorative leaf accent -->
  <div class="absolute -top-2 -right-2 w-16 h-16 opacity-10">
    <svg viewBox="0 0 64 64" fill="currentColor" class="text-sage">
      <path d="M32 4 C48 8, 60 24, 60 40 C60 52, 52 60, 40 60 C28 60, 20 52, 20 40 C20 28, 28 20, 32 4 Z"/>
      <path d="M32 4 L32 60" stroke="currentColor" stroke-width="2" fill="none"/>
    </svg>
  </div>

  <p class="text-xs text-brown-light mb-3 font-medium uppercase tracking-wide">Browse by Category</p>
  <div class="flex flex-wrap gap-2" role="navigation" aria-label="Categories">
    <% Poi::BROWSABLE_CATEGORIES.each do |category| %>
      <%= link_to browse_stay_pois_path(stay, category: category),
                  data: { turbo_stream: true, action: "click->poi-tabs#showLoading", poi_tabs_target: "tab" },
                  class: "category-pill #{current_category == category ? 'active' : ''}" do %>
        <%= category_icon(category) %>
        <span><%= category.titleize %></span>
      <% end %>
    <% end %>
  </div>
</div>
