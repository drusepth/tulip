<% if pois.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% pois.each do |poi| %>
      <%= render "pois/explore_card", poi: poi, stay: stay, on_bucket_list: bucket_list_poi_ids.include?(poi.id) %>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-16">
    <div class="text-taupe mb-3">
      <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </div>
    <p class="text-brown-light text-lg">No places found nearby</p>
    <p class="text-taupe text-sm mt-1">Try a different category</p>
  </div>
<% end %>
