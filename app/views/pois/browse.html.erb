<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to stay_path(@stay), class: "text-sage-dark hover:text-sage inline-flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to <%= @stay.title %>
    <% end %>
  </div>

  <!-- Header Card -->
  <div class="cozy-card p-6 mb-8 relative overflow-hidden">
    <!-- Decorative corner flourish -->
    <div class="absolute top-0 right-0 w-24 h-24 opacity-10">
      <svg viewBox="0 0 100 100" fill="currentColor" class="text-sage-dark">
        <path d="M100 0 Q60 10, 50 50 Q40 90, 0 100 L100 100 Z"/>
      </svg>
    </div>
    <!-- Decorative vine accent -->
    <div class="absolute bottom-0 left-0 w-32 h-16 opacity-10">
      <svg viewBox="0 0 128 64" fill="none" stroke="currentColor" stroke-width="2" class="text-sage">
        <path d="M0 32 Q16 16, 32 32 T64 32 T96 32 T128 32" stroke-linecap="round"/>
        <circle cx="24" cy="24" r="4" fill="currentColor"/>
        <circle cx="56" cy="40" r="3" fill="currentColor"/>
        <circle cx="88" cy="24" r="4" fill="currentColor"/>
      </svg>
    </div>

    <div class="relative flex items-center gap-4">
      <div class="w-12 h-12 rounded-full bg-gradient-to-br from-sage-light to-sage flex items-center justify-center flex-shrink-0">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </div>
      <div>
        <h1 class="text-2xl sm:text-3xl font-bold text-brown">Nearby Places</h1>
        <p class="mt-1 text-brown-light flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <%= [@stay.city, @stay.country].compact.join(', ') %>
        </p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
    <!-- Main Content (2/3) -->
    <div class="lg:col-span-2">
      <!-- Category Pills -->
      <%= render "pois/tabs", stay: @stay, current_category: @current_category %>

      <!-- POI List -->
      <%= turbo_frame_tag "poi_list" do %>
        <%= render "pois/list", pois: @pois, category: @current_category, stay: @stay %>
      <% end %>
    </div>

    <!-- Sidebar (1/3) - Sticky with max height -->
    <div class="lg:sticky lg:top-6 lg:self-start max-h-[calc(100vh-6rem)] overflow-hidden flex flex-col">
      <%= render "bucket_list_items/section", stay: @stay, hide_browse_link: true, scrollable: true %>
    </div>
  </div>
</div>
