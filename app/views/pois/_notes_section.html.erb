<%= turbo_frame_tag "poi_#{poi.id}_notes", class: "block" do %>
  <div class="relative overflow-hidden cozy-card p-6 group">
    <!-- Decorative corner flourish -->
    <div class="absolute top-0 right-0 w-20 h-20 opacity-5">
      <svg viewBox="0 0 100 100" fill="currentColor" class="text-lavender-dark">
        <path d="M100 0 Q60 10, 50 50 Q40 90, 0 100 L100 100 Z"/>
      </svg>
    </div>

    <!-- Header -->
    <div class="relative flex items-start justify-between mb-5">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-lavender-light to-lavender flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-semibold text-brown">Notes</h2>
          <p class="text-xs text-brown-light">Tips, thoughts & reminders</p>
        </div>
      </div>

      <!-- Edit button (visible on hover) -->
      <%= link_to edit_notes_stay_poi_path(stay, poi),
                  data: { turbo_frame: "poi_#{poi.id}_notes" },
                  class: "opacity-0 group-hover:opacity-100 transition-opacity duration-200 inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-sm font-medium text-lavender-dark hover:bg-lavender-light" do %>
        <% if poi.notes.present? %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
          Edit
        <% else %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add
        <% end %>
      <% end %>
    </div>

    <!-- Notes content -->
    <% if poi.notes.present? %>
      <div class="relative prose prose-sm text-brown max-w-none">
        <%= simple_format(poi.notes) %>
      </div>
    <% else %>
      <!-- Empty state -->
      <div class="relative text-center py-6">
        <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-lavender-light flex items-center justify-center">
          <svg class="w-6 h-6 text-lavender-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
        </div>
        <p class="text-brown-light text-sm">No notes yet</p>
        <p class="text-taupe text-xs mt-1">Add tips, reminders, or thoughts about this place...</p>
      </div>
    <% end %>
  </div>
<% end %>
