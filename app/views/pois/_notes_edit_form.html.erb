<%= turbo_frame_tag "poi_#{poi.id}_notes", class: "block" do %>
  <div class="relative overflow-hidden cozy-card p-6">
    <!-- Decorative corner flourish -->
    <div class="absolute top-0 right-0 w-20 h-20 opacity-5">
      <svg viewBox="0 0 100 100" fill="currentColor" class="text-lavender-dark">
        <path d="M100 0 Q60 10, 50 50 Q40 90, 0 100 L100 100 Z"/>
      </svg>
    </div>

    <!-- Header -->
    <div class="relative flex items-center gap-3 mb-5">
      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-lavender-light to-lavender flex items-center justify-center">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
        </svg>
      </div>
      <div>
        <h2 class="text-lg font-semibold text-brown">Edit Notes</h2>
      </div>
    </div>

    <!-- Edit Form -->
    <%= form_with url: update_notes_stay_poi_path(stay, poi), method: :patch, class: "relative" do |f| %>
      <div class="mb-4">
        <%= f.text_area :notes,
                        value: poi.notes,
                        rows: 6,
                        name: "poi[notes]",
                        placeholder: "Add tips, reminders, or thoughts about this place...",
                        class: "w-full px-4 py-3 rounded-2xl border-2 border-taupe-light bg-white text-brown placeholder-taupe focus:border-lavender focus:ring-2 focus:ring-lavender-light focus:outline-none transition-colors resize-none" %>
      </div>

      <div class="flex items-center justify-end gap-3">
        <%= link_to "Cancel",
                    stay_poi_path(stay, poi),
                    data: { turbo_frame: "poi_#{poi.id}_notes" },
                    class: "px-4 py-2 rounded-full text-sm font-medium text-brown-light hover:text-brown hover:bg-taupe-light transition-colors" %>
        <%= f.submit "Save Notes",
                     class: "px-5 py-2 rounded-full text-sm font-medium text-white bg-gradient-to-r from-lavender to-lavender-dark hover:from-lavender-dark hover:to-lavender shadow-sm hover:shadow-md transition-all cursor-pointer" %>
      </div>
    <% end %>
  </div>
<% end %>
