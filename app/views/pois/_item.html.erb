<%= turbo_frame_tag dom_id(poi) do %>
  <% has_details = poi_has_details?(poi) %>
  <li class="py-3 border-b border-taupe-light last:border-0" data-controller="collapsible">
    <div class="flex items-start justify-between cursor-pointer hover:bg-cream -mx-2 px-2 rounded-lg transition-colors"
         data-action="click->collapsible#toggle">
      <div class="flex items-start gap-3 flex-1 min-w-0">
        <%= button_to stay_bucket_list_items_path(stay),
                      method: :post,
                      params: { bucket_list_item: { title: poi.name, address: poi.address }, source_poi_id: poi.id },
                      class: "mt-0.5 w-7 h-7 flex-shrink-0 flex items-center justify-center rounded-full bg-sage-light hover:bg-sage hover:scale-110 hover:shadow-md text-sage-dark hover:text-white transition-all duration-200 cursor-pointer",
                      title: "Add to bucket list",
                      data: {
                        controller: "loading-button",
                        action: "click->collapsible#stopPropagation click->loading-button#start"
                      } do %>
          <svg data-loading-button-target="icon" class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          <svg data-loading-button-target="spinner" class="hidden w-3.5 h-3.5 animate-spin" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        <% end %>
        <div class="min-w-0 flex-1">
          <%= link_to place_path(poi.place, stay_id: stay.id), class: "text-brown font-medium truncate block hover:text-sage-dark transition-colors", data: { action: "click->collapsible#stopPropagation" } do %>
            <%= poi.name || 'Unnamed' %>
          <% end %>
          <% if poi.cuisine.present? %>
            <p class="text-sm text-brown-light truncate"><%= poi.cuisine.gsub(';', ', ').titleize %></p>
          <% end %>
        </div>
      </div>
      <div class="flex items-center gap-2 ml-3 flex-shrink-0">
        <span class="text-sm text-brown-light bg-cream px-2 py-1 rounded-full">
          <%= format_distance(poi.distance_meters) %>
        </span>
        <svg data-collapsible-target="icon" class="w-4 h-4 text-taupe transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </div>
    </div>

    <div data-collapsible-target="content" class="hidden mt-3 ml-10 space-y-3 text-sm">
      <% if has_details %>
        <% if poi.foursquare_photo_url.present? %>
          <%= image_tag poi.foursquare_photo_url, class: "w-full h-32 object-cover rounded-lg", alt: poi.name %>
        <% end %>

        <% if poi.foursquare_rating.present? || poi.foursquare_price.present? %>
          <div class="flex items-center gap-3">
            <% if poi.foursquare_rating.present? %>
              <div class="flex items-center gap-1">
                <span class="text-amber-500">&#9733;</span>
                <span class="text-brown font-medium"><%= foursquare_rating_stars(poi.foursquare_rating) %></span>
              </div>
            <% end %>
            <% if poi.foursquare_price.present? %>
              <span class="text-taupe font-medium"><%= foursquare_price_display(poi.foursquare_price) %></span>
            <% end %>
          </div>
        <% end %>

        <% if poi.foursquare_tip.present? %>
          <p class="text-brown-light italic">"<%= truncate(poi.foursquare_tip, length: 150) %>"</p>
        <% end %>

        <% if poi.address.present? %>
          <p class="text-brown-light"><%= poi.address %></p>
        <% end %>

        <% if poi.opening_hours.present? %>
          <div>
            <p class="text-xs font-medium text-brown mb-1">Hours</p>
            <% format_opening_hours(poi.opening_hours).each do |line| %>
              <p class="text-brown-light text-xs"><%= line %></p>
            <% end %>
          </div>
        <% end %>

        <% badges = poi_amenity_badges(poi) %>
        <% if badges.any? %>
          <div class="flex flex-wrap gap-2">
            <% badges.each do |badge| %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs bg-lavender-light text-lavender-dark">
                <%= badge[:label] %>
              </span>
            <% end %>
          </div>
        <% end %>

        <% if poi.phone.present? || poi.website.present? %>
          <div class="flex flex-wrap gap-4 text-xs">
            <% if poi.phone.present? %>
              <a href="tel:<%= poi.phone %>" class="text-sage-dark hover:text-sage flex items-center gap-1">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <%= format_phone(poi.phone) %>
              </a>
            <% end %>
            <% if poi.website.present? %>
              <a href="<%= poi.website %>" target="_blank" rel="noopener noreferrer" class="text-sage-dark hover:text-sage flex items-center gap-1">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
                </svg>
                <%= format_website_domain(poi.website) %>
              </a>
            <% end %>
          </div>
        <% end %>

        <% if poi.brand.present? %>
          <p class="text-xs text-taupe">Brand: <%= poi.brand %></p>
        <% end %>

        <% if poi.description.present? %>
          <p class="text-xs text-brown-light italic"><%= poi.description %></p>
        <% end %>

        <%= link_to place_path(poi.place, stay_id: stay.id), class: "inline-flex items-center gap-1 text-xs text-sage-dark hover:text-sage font-medium mt-1" do %>
          View full details
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      <% else %>
        <p class="text-taupe italic">No additional details available</p>
        <%= link_to place_path(poi.place, stay_id: stay.id), class: "inline-flex items-center gap-1 text-xs text-sage-dark hover:text-sage font-medium mt-1" do %>
          View details
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      <% end %>
    </div>
  </li>
<% end %>
