<div class="cozy-card p-6 relative overflow-hidden">
  <!-- Decorative corner flourish -->
  <div class="absolute top-0 right-0 w-20 h-20 opacity-5">
    <svg viewBox="0 0 100 100" fill="currentColor" class="text-sage-dark">
      <path d="M100 0 Q60 10, 50 50 Q40 90, 0 100 L100 100 Z"/>
    </svg>
  </div>

  <div class="relative flex items-center justify-between mb-4">
    <h2 class="text-lg font-semibold text-brown flex items-center gap-2">
      <%= category_icon(category) %>
      <%= category.titleize %>
    </h2>
    <span class="px-2 py-1 text-xs font-medium rounded-full bg-rose-light text-rose-dark"><%= pois.count %> places</span>
  </div>

  <% if pois.any? %>
    <ul class="space-y-3">
      <% pois.each do |poi| %>
        <%= render "pois/item", poi: poi, stay: stay %>
      <% end %>
    </ul>
  <% else %>
    <div class="text-center py-8">
      <div class="text-taupe mb-2">
        <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <p class="text-brown-light">No <%= category.titleize.downcase %> places found nearby</p>
    </div>
  <% end %>
</div>
