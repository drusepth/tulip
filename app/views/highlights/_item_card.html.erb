<div class="cozy-card p-4 hover:shadow-cozy-lg transition-shadow">
  <div class="flex items-start justify-between gap-2 mb-2">
    <h3 class="font-medium text-brown"><%= item.title %></h3>
    <div class="flex-shrink-0 w-6 h-6 rounded-full bg-sage flex items-center justify-center">
      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
      </svg>
    </div>
  </div>

  <% if item.address.present? %>
    <p class="text-sm text-brown-light mb-2 flex items-start gap-1">
      <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      <span class="line-clamp-2"><%= item.address %></span>
    </p>
  <% end %>

  <% if item.completed_at.present? %>
    <p class="text-xs text-brown-light mb-3 flex items-center gap-1">
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      Completed <%= item.completed_at.strftime("%b %d, %Y") %>
    </p>
  <% end %>

  <!-- Ratings Section -->
  <%= render partial: "bucket_list_item_ratings/ratings", locals: { bucket_list_item: item, stay: @stay } %>
</div>
