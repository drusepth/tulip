<%= turbo_frame_tag "ratings_#{bucket_list_item.id}" do %>
  <div class="mt-2 space-y-2">
    <% all_users = [stay.owner] + stay.collaborators.to_a %>
    <% all_users.uniq.each do |user| %>
      <% user_rating = bucket_list_item.rating_for(user) %>
      <% is_current_user = user == current_user %>
      <% has_rating = user_rating.present? %>
      <div class="flex items-center gap-2 <%= 'cursor-pointer' if is_current_user %>"
           <% if is_current_user %>
           data-controller="star-rating"
           data-star-rating-url-value="<%= stay_bucket_list_item_rating_path(stay, bucket_list_item) %>"
           data-star-rating-current-value="<%= user_rating&.rating || 0 %>"
           <% end %>>
        <%= avatar_tag(user, size: 20, html_options: {
          class: "w-5 h-5 ring-1 ring-taupe-light",
          title: user.name
        }) %>
        <div class="flex items-center gap-0.5">
          <% (1..5).each do |star_num| %>
            <% filled = user_rating && user_rating.rating >= star_num %>
            <% if is_current_user %>
              <button type="button"
                      class="star-btn p-0.5 transition-colors focus:outline-none cursor-pointer"
                      data-star-rating-target="star"
                      data-star-num="<%= star_num %>"
                      data-action="click->star-rating#rate mouseenter->star-rating#preview mouseleave->star-rating#restore">
                <% if filled %>
                  <svg class="w-4 h-4 text-coral" data-filled="true" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/>
                  </svg>
                <% else %>
                  <svg class="w-4 h-4 text-taupe" data-filled="false" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/>
                  </svg>
                <% end %>
              </button>
            <% else %>
              <span class="p-0.5">
                <% if filled %>
                  <svg class="w-4 h-4 text-coral" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/>
                  </svg>
                <% else %>
                  <svg class="w-4 h-4 text-taupe" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z"/>
                  </svg>
                <% end %>
              </span>
            <% end %>
          <% end %>
        </div>
        <% if is_current_user && !has_rating %>
          <span class="text-xs text-taupe italic" data-star-rating-target="hint">Click to rate</span>
        <% else %>
          <span class="text-xs text-brown-light"><%= user.name %></span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
