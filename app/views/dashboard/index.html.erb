<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Tulip</h1>
      <p class="mt-1 text-gray-600">Your travel logistics dashboard</p>
    </div>
    <div class="flex gap-3">
      <%= link_to map_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
        </svg>
        Map View
      <% end %>
      <%= link_to timeline_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Timeline
      <% end %>
      <%= link_to new_stay_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Stay
      <% end %>
    </div>
  </div>

  <!-- Current/Next Stay Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Current Stay -->
    <% if @current_stay %>
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-blue-900">Currently Staying</h2>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            Active
          </span>
        </div>
        <%= link_to stay_path(@current_stay), class: "block group" do %>
          <h3 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600"><%= @current_stay.title %></h3>
          <p class="text-gray-600 mt-1"><%= [@current_stay.city, @current_stay.country].compact.join(', ') %></p>
          <div class="mt-4 flex items-center justify-between text-sm">
            <span class="text-gray-500">
              <%= @current_stay.check_in.strftime('%b %d') %> - <%= @current_stay.check_out.strftime('%b %d, %Y') %>
            </span>
            <span class="text-blue-600 font-medium">
              <%= @current_stay.days_until_check_out %> days remaining
            </span>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">No Current Stay</h2>
        <p class="text-gray-500">You're not checked in anywhere right now.</p>
      </div>
    <% end %>

    <!-- Next Upcoming Stay -->
    <% if @next_stay %>
      <div class="bg-green-50 border border-green-200 rounded-lg p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-semibold text-green-900">Next Up</h2>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            <%= @next_stay.days_until_check_in %> days
          </span>
        </div>
        <%= link_to stay_path(@next_stay), class: "block group" do %>
          <h3 class="text-xl font-bold text-gray-900 group-hover:text-indigo-600"><%= @next_stay.title %></h3>
          <p class="text-gray-600 mt-1"><%= [@next_stay.city, @next_stay.country].compact.join(', ') %></p>
          <div class="mt-4 flex items-center justify-between text-sm">
            <span class="text-gray-500">
              <%= @next_stay.check_in.strftime('%b %d') %> - <%= @next_stay.check_out.strftime('%b %d, %Y') %>
            </span>
            <span class="text-green-600 font-medium">
              <%= @next_stay.duration_days %> nights
            </span>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-2">No Upcoming Stays</h2>
        <p class="text-gray-500">
          <%= link_to "Add a stay", new_stay_path, class: "text-indigo-600 hover:text-indigo-800" %> to get started.
        </p>
      </div>
    <% end %>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <p class="text-3xl font-bold text-gray-900"><%= @total_stays %></p>
      <p class="text-sm text-gray-500">Total Stays</p>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <p class="text-3xl font-bold text-gray-900"><%= @countries_visited %></p>
      <p class="text-sm text-gray-500">Countries</p>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <p class="text-3xl font-bold text-gray-900"><%= Stay.upcoming.count %></p>
      <p class="text-sm text-gray-500">Upcoming</p>
    </div>
    <div class="bg-white rounded-lg shadow p-4 text-center">
      <p class="text-3xl font-bold <%= @gaps.any? ? 'text-yellow-600' : 'text-gray-900' %>"><%= @gaps.size %></p>
      <p class="text-sm text-gray-500">Gaps to Fill</p>
    </div>
  </div>

  <!-- Gaps Warning -->
  <% if @gaps.any? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8">
      <h2 class="text-lg font-semibold text-yellow-900 mb-4">Unbooked Gaps</h2>
      <div class="space-y-3">
        <% @gaps.each do |gap| %>
          <div class="flex items-center justify-between p-3 bg-white rounded-lg border border-yellow-100">
            <div>
              <p class="font-medium text-gray-900">
                <%= gap[:start_date].strftime('%b %d') %> - <%= gap[:end_date].strftime('%b %d, %Y') %>
              </p>
              <p class="text-sm text-yellow-700"><%= gap[:days] %> days unbooked</p>
            </div>
            <%= link_to new_stay_path(check_in: gap[:start_date], check_out: gap[:end_date]),
                class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-yellow-700 bg-yellow-100 hover:bg-yellow-200" do %>
              + Add Stay
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Lists -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Upcoming Stays -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b">
        <h2 class="text-lg font-semibold text-gray-900">Upcoming Stays</h2>
      </div>
      <% if @upcoming_stays.any? %>
        <ul class="divide-y divide-gray-200">
          <% @upcoming_stays.each do |stay| %>
            <li>
              <%= link_to stay_path(stay), class: "block px-6 py-4 hover:bg-gray-50" do %>
                <div class="flex items-center justify-between">
                  <div>
                    <p class="font-medium text-gray-900"><%= stay.title %></p>
                    <p class="text-sm text-gray-500"><%= [stay.city, stay.country].compact.join(', ') %></p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-gray-900"><%= stay.check_in.strftime('%b %d') %></p>
                    <p class="text-xs text-gray-500"><%= stay.duration_days %> nights</p>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="px-6 py-8 text-center text-gray-500">
          No upcoming stays
        </div>
      <% end %>
    </div>

    <!-- Recent Stays -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b">
        <h2 class="text-lg font-semibold text-gray-900">Recent Stays</h2>
      </div>
      <% if @recent_stays.any? %>
        <ul class="divide-y divide-gray-200">
          <% @recent_stays.each do |stay| %>
            <li>
              <%= link_to stay_path(stay), class: "block px-6 py-4 hover:bg-gray-50" do %>
                <div class="flex items-center justify-between">
                  <div>
                    <p class="font-medium text-gray-900"><%= stay.title %></p>
                    <p class="text-sm text-gray-500"><%= [stay.city, stay.country].compact.join(', ') %></p>
                  </div>
                  <div class="text-right">
                    <p class="text-sm font-medium text-gray-500"><%= stay.check_out.strftime('%b %d, %Y') %></p>
                    <p class="text-xs text-gray-400"><%= stay.duration_days %> nights</p>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="px-6 py-8 text-center text-gray-500">
          No past stays yet
        </div>
      <% end %>
    </div>
  </div>
</div>
