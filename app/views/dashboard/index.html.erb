<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Alerts Section (only shows when there are issues) -->
  <% if @gaps.any? || @booking_alert %>
    <div class="mb-8 space-y-4">
      <!-- Gaps Alert (Critical) -->
      <% if @gaps.any? %>
        <div class="alert-error p-5">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-rose-dark mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div class="flex-1">
              <h3 class="text-rose-dark font-semibold text-lg">
                <%= pluralize(@gaps.size, 'gap') %> in your travel coverage
              </h3>
              <div class="mt-3 space-y-2">
                <% @gaps.each do |gap| %>
                  <div class="flex items-center justify-between bg-white rounded-2xl p-4 border border-rose">
                    <div>
                      <span class="font-medium text-brown">
                        <%= gap[:start_date].strftime('%b %d') %> - <%= gap[:end_date].strftime('%b %d, %Y') %>
                      </span>
                      <span class="text-rose-dark ml-2">(<%= pluralize(gap[:days], 'day') %> unbooked)</span>
                    </div>
                    <%= link_to new_stay_path(check_in: gap[:start_date], check_out: gap[:end_date]),
                        class: "btn-secondary text-sm" do %>
                      Book Now
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Booking Alert (Warning) -->
      <% if @booking_alert %>
        <div class="alert-warning p-5">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-coral-dark mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="flex-1">
              <h3 class="text-coral-dark font-semibold text-lg">Time to book <strong><%= @booking_alert[:city] %><%= ", #{@booking_alert[:state]}" if @booking_alert[:state].present? %></strong></h3>
              <p class="text-coral-dark mt-1">
                Your planned stay starts in <%= pluralize(@booking_alert[:days_until_check_in], 'day') %>.
                Find and book your accommodation!
              </p>
            </div>
            <%= link_to edit_stay_path(@booking_alert[:destination]),
                class: "ml-4 btn-outline bg-coral-light border-coral text-coral-dark hover:bg-coral flex-shrink-0" do %>
              Book Now
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Hero Section: Current & Next Stay -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Current Stay -->
    <% if @current_stay %>
      <%= link_to stay_path(@current_stay), class: "block group" do %>
        <div class="hero-card h-72 <%= 'ring-2 ring-dashed ring-lavender' unless @current_stay.booked? %>">
          <% if @current_stay.image_url.present? %>
            <img src="<%= @current_stay.image_url %>" alt="<%= @current_stay.title %>"
                 class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
            <div class="hero-card-overlay"></div>
          <% else %>
            <div class="absolute inset-0 bg-gradient-to-br from-rose to-rose-dark"></div>
          <% end %>
          <div class="absolute inset-0 p-6 flex flex-col justify-end text-white">
            <div class="flex items-center gap-2 mb-2">
              <span class="badge badge-current bg-rose/90 text-white">
                You are here
              </span>
              <% unless @current_stay.booked? %>
                <span class="badge badge-planned bg-lavender-dark/90 text-white">
                  Not booked
                </span>
              <% end %>
            </div>
            <h2 class="text-2xl font-bold group-hover:underline"><%= @current_stay.title %></h2>
            <p class="text-white/90 mt-1"><%= [@current_stay.city, @current_stay.country].compact.join(', ') %></p>
            <div class="mt-3 flex items-center justify-between text-sm text-white/80">
              <span><%= @current_stay.check_in.strftime('%b %d') %> - <%= @current_stay.check_out.strftime('%b %d, %Y') %></span>
              <span class="font-semibold text-white"><%= pluralize(@current_stay.days_until_check_out, 'day') %> remaining</span>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="cozy-card h-72 flex items-center justify-center">
        <div class="text-center text-brown-light">
          <svg class="w-12 h-12 mx-auto mb-3 text-taupe" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          <p class="font-medium text-brown">No current stay</p>
          <p class="text-sm">You're between adventures</p>
        </div>
      </div>
    <% end %>

    <!-- Next Stay -->
    <% if @next_stay %>
      <%= link_to stay_path(@next_stay), class: "block group" do %>
        <div class="hero-card h-72 <%= 'ring-2 ring-dashed ring-lavender' unless @next_stay.booked? %>">
          <% if @next_stay.image_url.present? %>
            <img src="<%= @next_stay.image_url %>" alt="<%= @next_stay.title %>"
                 class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
            <div class="hero-card-overlay"></div>
          <% else %>
            <div class="absolute inset-0 bg-gradient-to-br <%= @next_stay.booked? ? 'from-sage to-sage-dark' : 'from-lavender to-lavender-dark' %>"></div>
          <% end %>
          <div class="absolute inset-0 p-6 flex flex-col justify-end text-white">
            <div class="flex items-center gap-2 mb-2">
              <% if @next_stay.booked? %>
                <span class="badge badge-upcoming bg-sage/90 text-white">
                  Next up
                </span>
              <% else %>
                <span class="badge badge-planned bg-lavender-dark/90 text-white">
                  Planned
                </span>
              <% end %>
              <span class="text-white/90 text-sm">in <%= pluralize(@next_stay.days_until_check_in, 'day') %></span>
            </div>
            <h2 class="text-2xl font-bold group-hover:underline"><%= @next_stay.title %></h2>
            <p class="text-white/90 mt-1"><%= [@next_stay.city, @next_stay.country].compact.join(', ') %></p>
            <div class="mt-3 flex items-center justify-between text-sm text-white/80">
              <span><%= @next_stay.check_in.strftime('%b %d') %> - <%= @next_stay.check_out.strftime('%b %d, %Y') %></span>
              <% if @next_stay.booked? %>
                <span class="font-semibold text-white"><%= pluralize(@next_stay.duration_days, 'night') %></span>
              <% else %>
                <span class="font-semibold text-white">Book this stay</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="cozy-card h-72 flex items-center justify-center">
        <div class="text-center text-brown-light">
          <svg class="w-12 h-12 mx-auto mb-3 text-taupe" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4"></path>
          </svg>
          <p class="font-medium text-brown">No upcoming stays</p>
          <%= link_to "Add your next adventure", new_stay_path, class: "text-sage-dark hover:text-sage text-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Botanical Divider -->
  <div class="botanical-divider">
    <span>Coming Up</span>
  </div>

  <!-- Upcoming Stays Timeline -->
  <% remaining_upcoming = @upcoming_stays.reject { |s| s == @next_stay } %>
  <% if remaining_upcoming.any? %>
    <div class="mb-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% remaining_upcoming.each do |stay| %>
          <%= link_to stay_path(stay), class: "block group" do %>
            <div class="hero-card h-48 <%= 'ring-2 ring-dashed ring-lavender' unless stay.booked? %>">
              <% if stay.image_url.present? %>
                <img src="<%= stay.image_url %>" alt="<%= stay.title %>"
                     class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                <div class="hero-card-overlay"></div>
              <% else %>
                <div class="absolute inset-0 bg-gradient-to-br <%= stay.booked? ? 'from-taupe to-taupe-dark' : 'from-lavender to-lavender-dark' %>"></div>
              <% end %>
              <div class="absolute inset-0 p-4 flex flex-col justify-end text-white">
                <div class="flex items-center gap-2 mb-1">
                  <% unless stay.booked? %>
                    <span class="badge badge-planned bg-lavender-dark/90 text-white text-xs">
                      Planned
                    </span>
                  <% end %>
                </div>
                <h3 class="font-semibold group-hover:underline truncate"><%= stay.title %></h3>
                <p class="text-white/80 text-sm"><%= [stay.city, stay.country].compact.join(', ') %></p>
                <div class="mt-2 flex items-center justify-between text-xs text-white/70">
                  <span><%= stay.check_in.strftime('%b %d') %> - <%= stay.check_out.strftime('%b %d') %></span>
                  <span>in <%= pluralize(stay.days_until_check_in, 'day') %></span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Botanical Divider -->
  <div class="botanical-divider">
    <span>Your Journey</span>
  </div>

  <!-- Stats & Recent Stays -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Quick Stats -->
    <div class="lg:col-span-1">
      <div class="cozy-card p-6 space-y-4">
        <div class="flex items-center gap-3 mb-4">
          <svg class="w-5 h-5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
          </svg>
          <h2 class="text-xl font-semibold text-brown">Adventure Stats</h2>
        </div>
        <div class="flex items-center justify-between py-3 border-b border-taupe-light">
          <span class="text-brown-light">Total Stays</span>
          <span class="text-2xl font-bold text-brown"><%= @total_stays %></span>
        </div>
        <div class="flex items-center justify-between py-3">
          <span class="text-brown-light">States Visited</span>
          <span class="text-2xl font-bold text-brown"><%= @states_visited %></span>
        </div>
      </div>
    </div>

    <!-- Recent Stays -->
    <div class="lg:col-span-2">
      <div class="cozy-card overflow-hidden">
        <div class="p-6 border-b border-taupe-light">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-taupe" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h2 class="text-xl font-semibold text-brown">Recent Stays</h2>
          </div>
        </div>
        <% if @recent_stays.any? %>
          <ul class="divide-y divide-taupe-light">
            <% @recent_stays.each do |stay| %>
              <li>
                <%= link_to stay_path(stay), class: "flex items-center gap-4 px-6 py-4 hover:bg-taupe-light/30 transition-colors" do %>
                  <% if stay.image_url.present? %>
                    <img src="<%= stay.image_url %>" alt="<%= stay.title %>"
                         class="w-12 h-12 rounded-xl object-cover flex-shrink-0">
                  <% else %>
                    <div class="w-12 h-12 rounded-xl bg-taupe-light flex-shrink-0"></div>
                  <% end %>
                  <div class="flex-1 min-w-0">
                    <p class="font-medium text-brown truncate"><%= stay.title %></p>
                    <p class="text-sm text-brown-light"><%= [stay.city, stay.country].compact.join(', ') %></p>
                  </div>
                  <div class="text-right flex-shrink-0">
                    <p class="text-sm text-brown-light"><%= stay.check_out.strftime('%b %Y') %></p>
                    <p class="text-xs text-brown-lighter"><%= pluralize(stay.duration_days, 'night') %></p>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="px-6 py-8 text-center text-brown-light">
            No past stays yet
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Timeline Card -->
  <div class="mt-8">
    <%= link_to timeline_path, class: "block group" do %>
      <div class="cozy-card p-6 hover:shadow-cozy-lg transition-shadow">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-lavender-light flex items-center justify-center">
              <svg class="w-6 h-6 text-lavender-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-brown group-hover:text-sage-dark transition-colors" style="font-family: var(--font-heading);">View Timeline</h3>
              <p class="text-sm text-brown-light">See all your stays laid out on a visual timeline</p>
            </div>
          </div>
          <svg class="w-5 h-5 text-brown-light group-hover:text-sage-dark group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>
    <% end %>
  </div>
</div>
