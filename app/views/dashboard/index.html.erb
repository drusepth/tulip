<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Alerts Section (only shows when there are issues) -->
  <% if @gaps.any? || @booking_alert %>
    <div class="mb-8 space-y-4">
      <!-- Gaps Alert (Critical) -->
      <% if @gaps.any? %>
        <div class="alert-error p-5">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-rose-dark mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            <div class="flex-1">
              <h3 class="text-rose-dark font-semibold text-lg">
                <%= pluralize(@gaps.size, 'gap') %> in your travel coverage
              </h3>
              <div class="mt-3 space-y-2">
                <% @gaps.each do |gap| %>
                  <div class="flex items-center justify-between bg-white rounded-2xl p-4 border border-rose">
                    <div>
                      <span class="font-medium text-brown">
                        <%= gap[:start_date].strftime('%b %d') %> - <%= gap[:end_date].strftime('%b %d, %Y') %>
                      </span>
                      <span class="text-rose-dark ml-2">(<%= pluralize(gap[:days], 'day') %> unbooked)</span>
                    </div>
                    <%= link_to new_stay_path(check_in: gap[:start_date], check_out: gap[:end_date]),
                        class: "btn-secondary text-sm" do %>
                      Book Now
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Booking Alert (Warning) -->
      <% if @booking_alert %>
        <div class="alert-warning p-5">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-coral-dark mt-0.5 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div class="flex-1">
              <h3 class="text-coral-dark font-semibold text-lg">Time to book <strong><%= @booking_alert[:city] %><%= ", #{@booking_alert[:state]}" if @booking_alert[:state].present? %></strong></h3>
              <p class="text-coral-dark mt-1">
                Your planned stay starts in <%= pluralize(@booking_alert[:days_until_check_in], 'day') %>.
                Find and book your accommodation!
              </p>
            </div>
            <%= link_to edit_stay_path(@booking_alert[:destination]),
                class: "ml-4 btn-outline bg-coral-light border-coral text-coral-dark hover:bg-coral flex-shrink-0" do %>
              Book Now
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Hero Section: Current & Next Stay -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <!-- Column 1: Right Now -->
    <div>
      <h2 class="text-lg font-semibold text-brown mb-3" style="font-family: var(--font-heading);">
        Right Now
      </h2>
      <!-- Current Stay -->
      <% if @current_stay %>
      <%= link_to stay_path(@current_stay), class: "block group" do %>
        <div class="hero-card h-72 <%= 'ring-2 ring-dashed ring-lavender' unless @current_stay.booked? %>">
          <% if @current_stay.image_url.present? %>
            <img src="<%= @current_stay.image_url %>" alt="<%= @current_stay.title %>"
                 class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
            <div class="hero-card-overlay"></div>
          <% else %>
            <div class="absolute inset-0 bg-gradient-to-br from-rose to-rose-dark"></div>
          <% end %>
          <div class="absolute inset-0 p-6 flex flex-col justify-end text-white">
            <div class="flex items-center gap-2 mb-2">
              <span class="badge badge-current bg-rose text-white">
                You are here
              </span>
              <% unless @current_stay.booked? %>
                <span class="badge badge-planned text-white" style="background-color: rgba(158, 146, 176, 0.9)">
                  Not booked
                </span>
              <% end %>
            </div>
            <h2 class="text-2xl font-bold group-hover:underline"><%= @current_stay.title %></h2>
            <p class="text-white mt-1"><%= [@current_stay.city, @current_stay.country].compact.join(', ') %></p>
            <div class="mt-3 flex items-center justify-between text-sm text-white opacity-80">
              <span><%= @current_stay.check_in.strftime('%b %d') %> - <%= @current_stay.check_out.strftime('%b %d, %Y') %></span>
              <span class="font-semibold text-white"><%= pluralize(@current_stay.days_until_check_out, 'day') %> remaining</span>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <!-- Destination Inspiration Card -->
      <%= link_to destinations_path, class: "block group" do %>
        <div class="hero-card h-24 md:h-72">
          <!-- Gradient Background (no specific destination image) -->
          <div class="absolute inset-0 bg-gradient-to-br from-lavender to-lavender-dark"></div>

          <!-- Mobile Layout (compact horizontal) -->
          <div class="absolute inset-0 p-4 md:hidden flex items-center justify-between">
            <div class="text-white">
              <p class="text-xs font-medium flex items-center gap-1.5 mb-0.5">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                No current stay
              </p>
              <p class="text-base font-semibold">Discover your next adventure</p>
            </div>
            <div class="destination-explore-btn flex items-center gap-1 px-3 py-1.5 backdrop-blur-sm rounded-full text-white text-sm font-medium">
              Explore
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>

          <!-- Desktop Layout (full card like current stay) -->
          <div class="absolute inset-0 p-6 hidden md:flex flex-col justify-end text-white">
            <div class="flex items-center gap-2 mb-2">
              <span class="badge bg-white text-lavender-dark">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                No current stay
              </span>
            </div>
            <h2 class="text-2xl font-bold group-hover:underline">Discover your next adventure</h2>
            <p class="text-white mt-1">You're between adventures</p>
            <div class="mt-3 flex items-center text-sm text-white opacity-80">
              <span>Browse <%= FeaturedDestination::DESTINATIONS.length %> inspiring destinations</span>
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>

    <!-- Column 2: Next Up / Plan a Trip -->
    <div>
      <h2 class="text-lg font-semibold text-brown mb-3" style="font-family: var(--font-heading);">
        <% if @next_stay %>
          Next Up
        <% else %>
          Plan a Trip
        <% end %>
      </h2>
      <!-- Next Stay -->
      <% if @next_stay %>
      <%= link_to stay_path(@next_stay), class: "block group" do %>
        <div class="hero-card h-72 <%= 'ring-2 ring-dashed ring-lavender' unless @next_stay.booked? %>">
          <% if @next_stay.image_url.present? %>
            <img src="<%= @next_stay.image_url %>" alt="<%= @next_stay.title %>"
                 class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
            <div class="hero-card-overlay"></div>
          <% else %>
            <div class="absolute inset-0 bg-gradient-to-br <%= @next_stay.booked? ? 'from-sage to-sage-dark' : 'from-lavender to-lavender-dark' %>"></div>
          <% end %>
          <div class="absolute inset-0 p-6 flex flex-col justify-end text-white">
            <div class="flex items-center gap-2 mb-2">
              <% if @next_stay.booked? %>
                <span class="badge badge-upcoming bg-sage text-white">
                  Next up
                </span>
              <% else %>
                <span class="badge badge-planned text-white" style="background-color: rgba(158, 146, 176, 0.9)">
                  Planned
                </span>
              <% end %>
              <span class="text-white text-sm">in <%= pluralize(@next_stay.days_until_check_in, 'day') %></span>
            </div>
            <h2 class="text-2xl font-bold group-hover:underline"><%= @next_stay.title %></h2>
            <p class="text-white mt-1"><%= [@next_stay.city, @next_stay.country].compact.join(', ') %></p>
            <div class="mt-3 flex items-center justify-between text-sm text-white opacity-80">
              <span><%= @next_stay.check_in.strftime('%b %d') %> - <%= @next_stay.check_out.strftime('%b %d, %Y') %></span>
              <% if @next_stay.booked? %>
                <span class="font-semibold text-white"><%= pluralize(@next_stay.duration_days, 'night') %></span>
              <% else %>
                <span class="font-semibold text-white">Book this stay</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= link_to new_stay_path, class: "block group" do %>
        <div class="cozy-card h-72 flex items-center justify-center cursor-pointer
                    transition-all duration-300 ease-out
                    hover:shadow-xl hover:scale-[1.02] hover:border-sage
                    hover:bg-gradient-to-br hover:from-white hover:to-sage-light/30">
          <div class="text-center text-brown-light transition-transform duration-300 group-hover:scale-105">
            <div class="relative">
              <svg class="w-12 h-12 mx-auto mb-3 text-taupe transition-all duration-300 group-hover:text-sage group-hover:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4v16m8-8H4"></path>
              </svg>
            </div>
            <p class="font-medium text-brown transition-colors duration-300 group-hover:text-sage-dark">No upcoming stays</p>
            <p class="text-sage-dark text-sm transition-all duration-300 group-hover:text-sage group-hover:font-medium">Add your next adventure</p>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>

  <!-- Botanical Divider -->
  <div class="botanical-divider">
    <span>Coming Up</span>
  </div>

  <!-- Upcoming Stays Timeline -->
  <% remaining_upcoming = @upcoming_stays.reject { |s| s == @next_stay } %>
  <% if remaining_upcoming.any? %>
    <div class="mb-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <% remaining_upcoming.each do |stay| %>
          <%= link_to stay_path(stay), class: "block group" do %>
            <div class="hero-card h-48 <%= 'ring-2 ring-dashed ring-lavender' unless stay.booked? %>">
              <% if stay.image_url.present? %>
                <img src="<%= stay.image_url %>" alt="<%= stay.title %>"
                     class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
                <div class="hero-card-overlay"></div>
              <% else %>
                <div class="absolute inset-0 bg-gradient-to-br <%= stay.booked? ? 'from-taupe to-taupe-dark' : 'from-lavender to-lavender-dark' %>"></div>
              <% end %>
              <div class="absolute inset-0 p-4 flex flex-col justify-end text-white">
                <div class="flex items-center gap-2 mb-1">
                  <% unless stay.booked? %>
                    <span class="badge badge-planned text-white" style="background-color: rgba(158, 146, 176, 0.9) text-xs">
                      Planned
                    </span>
                  <% end %>
                </div>
                <h3 class="font-semibold group-hover:underline truncate"><%= stay.title %></h3>
                <p class="text-white opacity-80 text-sm"><%= [stay.city, stay.country].compact.join(', ') %></p>
                <div class="mt-2 flex items-center justify-between text-xs text-white opacity-70">
                  <span><%= stay.check_in.strftime('%b %d') %> - <%= stay.check_out.strftime('%b %d') %></span>
                  <span>in <%= pluralize(stay.days_until_check_in, 'day') %></span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Wishlist Section (stays without dates) -->
  <% if @wishlist_stays.any? %>
    <div class="botanical-divider">
      <span>Dream Destinations</span>
    </div>

    <div class="mb-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        <% @wishlist_stays.each do |stay| %>
          <%= link_to stay_path(stay), class: "block group" do %>
            <div class="cozy-card p-4 hover:shadow-cozy-lg transition-all">
              <div class="flex items-start gap-3">
                <div class="w-10 h-10 rounded-full bg-lavender-light flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-lavender-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="font-semibold text-brown group-hover:text-sage-dark transition-colors truncate"><%= stay.title %></h3>
                  <p class="text-sm text-brown-light"><%= [stay.city, stay.country].compact.join(', ') %></p>
                  <p class="text-xs text-lavender-dark mt-1">Add dates when ready</p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <!-- Add to Wishlist Card -->
        <%= link_to new_stay_path, class: "block group h-full" do %>
          <div class="cozy-card p-4 h-full border-dashed hover:border-sage hover:shadow-cozy-lg transition-all flex items-center">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-taupe-light flex items-center justify-center flex-shrink-0 group-hover:bg-sage-light transition-colors">
                <svg class="w-5 h-5 text-taupe group-hover:text-sage-dark transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-brown-light group-hover:text-sage-dark transition-colors">Add a dream destination</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Botanical Divider -->
  <div class="botanical-divider">
    <span>Your Journey</span>
  </div>

  <!-- Stats & Recent Stays -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Quick Stats -->
    <div class="lg:col-span-1">
      <div class="cozy-card p-6 space-y-4">
        <div class="flex items-center gap-3 mb-4">
          <svg class="w-5 h-5 text-sage" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
          </svg>
          <h2 class="text-xl font-semibold text-brown">Adventure Stats</h2>
        </div>
        <div class="flex items-center justify-between py-3 border-b border-taupe-light">
          <span class="text-brown-light">Total Stays</span>
          <span class="text-2xl font-bold text-brown"><%= @total_stays %></span>
        </div>
        <div class="flex items-center justify-between py-3">
          <span class="text-brown-light">States Visited</span>
          <span class="text-2xl font-bold text-brown"><%= @states_visited %></span>
        </div>
      </div>
    </div>

    <!-- Recent Stays -->
    <div class="lg:col-span-2">
      <div class="cozy-card overflow-hidden">
        <div class="p-6 border-b border-taupe-light">
          <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-taupe" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h2 class="text-xl font-semibold text-brown">Recent Stays</h2>
          </div>
        </div>
        <% if @recent_stays.any? %>
          <ul class="divide-y divide-taupe-light">
            <% @recent_stays.each do |stay| %>
              <li>
                <%= link_to stay_path(stay), class: "flex items-center gap-4 px-6 py-4 hover:bg-taupe-light transition-colors" do %>
                  <% if stay.image_url.present? %>
                    <img src="<%= stay.image_url %>" alt="<%= stay.title %>"
                         class="w-12 h-12 rounded-xl object-cover flex-shrink-0">
                  <% else %>
                    <div class="w-12 h-12 rounded-xl bg-taupe-light flex-shrink-0"></div>
                  <% end %>
                  <div class="flex-1 min-w-0">
                    <p class="font-medium text-brown truncate"><%= stay.title %></p>
                    <p class="text-sm text-brown-light"><%= [stay.city, stay.country].compact.join(', ') %></p>
                  </div>
                  <div class="text-right flex-shrink-0">
                    <p class="text-sm text-brown-light"><%= stay.check_out.strftime('%b %Y') %></p>
                    <p class="text-xs text-brown-lighter"><%= pluralize(stay.duration_days, 'night') %></p>
                  </div>
                <% end %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="px-6 py-8 text-center text-brown-light">
            No past stays yet
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Timeline Card -->
  <div class="mt-8">
    <%= link_to timeline_path, class: "block group" do %>
      <div class="cozy-card p-6 hover:shadow-cozy-lg transition-shadow">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-lavender-light flex items-center justify-center">
              <svg class="w-6 h-6 text-lavender-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-brown group-hover:text-sage-dark transition-colors" style="font-family: var(--font-heading);">View Timeline</h3>
              <p class="text-sm text-brown-light">See all your stays laid out on a visual timeline</p>
            </div>
          </div>
          <svg class="w-5 h-5 text-brown-light group-hover:text-sage-dark group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </div>
      </div>
    <% end %>
  </div>
</div>
