<%= turbo_frame_tag dom_id(bucket_list_item) do %>
  <div class="bucket-list-item py-2 px-3 rounded-xl bg-sage-light">
    <%= form_with model: [bucket_list_item.stay, bucket_list_item],
                  class: "space-y-3" do |f| %>
      <div class="flex gap-2">
        <%= f.text_field :title,
                         placeholder: "What do you want to do?",
                         class: "cozy-input flex-1",
                         required: true,
                         autofocus: true %>

        <%= f.select :category,
                     BucketListItem::CATEGORIES.map { |c| [c.titleize, c] },
                     {},
                     class: "cozy-select w-32" %>
      </div>

      <div>
        <label class="cozy-label" for="bucket_list_item_address">
          Address (optional)
        </label>
        <%= f.text_field :address,
                         placeholder: "e.g. 123 Main St, San Francisco",
                         class: "cozy-input" %>
      </div>

      <div>
        <label class="cozy-label" for="bucket_list_item_notes">
          Notes (optional)
        </label>
        <%= f.text_area :notes,
                        placeholder: "Any additional details...",
                        rows: 2,
                        class: "cozy-textarea" %>
      </div>

      <div class="flex gap-2 justify-end">
        <%= link_to "Cancel",
                    stay_path(bucket_list_item.stay),
                    class: "btn-outline text-sm py-1.5 px-3",
                    data: { turbo_stream: true } %>
        <%= f.submit "Save", class: "btn-primary text-sm py-1.5 px-3" %>
      </div>
    <% end %>
  </div>
<% end %>
