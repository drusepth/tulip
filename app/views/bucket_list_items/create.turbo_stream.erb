<%= turbo_stream.append "bucket_list_pending_items" do %>
  <%= render "bucket_list_items/item", bucket_list_item: @bucket_list_item %>
<% end %>

<%= turbo_stream.replace "bucket_list_form" do %>
  <%= render "bucket_list_items/form", stay: @stay %>
<% end %>

<%= turbo_stream.replace "bucket_list_section" do %>
  <%= render "bucket_list_items/section", stay: @stay %>
<% end %>

<% if @source_poi %>
  <%= turbo_stream.replace dom_id(@source_poi) do %>
    <% if @explore %>
      <%= render "pois/explore_card", poi: @source_poi, stay: @stay, on_bucket_list: true %>
    <% elsif @compact %>
      <%= render "pois/item_added_compact", poi: @source_poi, stay: @stay %>
    <% else %>
      <%= render "pois/item_added", poi: @source_poi, stay: @stay %>
    <% end %>
  <% end %>
<% end %>
