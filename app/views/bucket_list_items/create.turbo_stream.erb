<%= turbo_stream.remove "bucket_list_empty_state" %>

<%= turbo_stream.append "bucket_list_pending_items" do %>
  <%= render "bucket_list_items/item", bucket_list_item: @bucket_list_item, stay: @stay %>
<% end %>

<%= turbo_stream.update "bucket_list_progress" do %>
  <%= render "bucket_list_items/progress", stay: @stay %>
<% end %>

<% if @source_place && @compact %>
  <%= turbo_stream.replace "place_#{@source_place.id}" do %>
    <%= render "bucket_list_items/place_added_compact", place: @source_place, stay: @stay %>
  <% end %>
<% elsif @source_poi %>
  <%= turbo_stream.replace dom_id(@source_poi) do %>
    <%= render @compact ? "pois/item_added_compact" : "pois/item_added", poi: @source_poi, stay: @stay %>
  <% end %>
<% end %>
