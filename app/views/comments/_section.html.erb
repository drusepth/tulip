<%= turbo_frame_tag "comments_section", class: "block" do %>
  <% commentable = local_assigns[:commentable] || local_assigns[:stay] %>
  <% is_place = commentable.is_a?(Place) %>
  <% comments_count = commentable.comments.count %>
  <% top_level_comments = commentable.comments.top_level.ordered.includes(:user, replies: :user) %>

  <div class="relative overflow-hidden cozy-card p-4 sm:p-6" id="comments_container">
    <!-- Decorative corner flourish (hidden on mobile) -->
    <div class="absolute top-0 right-0 w-20 h-20 opacity-5 hidden sm:block">
      <svg viewBox="0 0 100 100" fill="currentColor" class="text-lavender-dark">
        <path d="M100 0 Q60 10, 50 50 Q40 90, 0 100 L100 100 Z"/>
      </svg>
    </div>

    <!-- Header -->
    <div class="relative flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3 mb-4 sm:mb-5">
      <div class="flex items-center gap-3">
        <div class="w-9 h-9 sm:w-10 sm:h-10 rounded-full bg-gradient-to-br from-lavender-light to-lavender flex items-center justify-center flex-shrink-0">
          <svg class="w-4 h-4 sm:w-5 sm:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <div>
          <h2 class="text-base sm:text-lg font-semibold text-brown">Comments</h2>
          <p class="text-xs text-brown-light hidden sm:block"><%= is_place ? "Share your thoughts about this place" : "Discuss this trip with collaborators" %></p>
        </div>
      </div>
      <div id="comments_count" class="flex items-center gap-2">
        <span class="px-3 py-1 rounded-full bg-lavender-light text-lavender-dark text-sm font-medium">
          <%= comments_count %> <%= "comment".pluralize(comments_count) %>
        </span>
      </div>
    </div>

    <!-- Add Comment Form -->
    <%= render "comments/form", commentable: commentable %>

    <!-- Comments List -->
    <div id="comments_list" class="divide-y divide-taupe-light">
      <% if top_level_comments.any? %>
        <% top_level_comments.each do |comment| %>
          <%= render "comments/comment", comment: comment, commentable: commentable %>
        <% end %>
      <% else %>
        <div id="comments_empty_state" class="text-center py-6">
          <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-lavender-light flex items-center justify-center">
            <svg class="w-6 h-6 text-lavender" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
          <p class="text-brown-light text-sm">No comments yet</p>
          <p class="text-taupe text-xs mt-1">Be the first to share your thoughts!</p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
