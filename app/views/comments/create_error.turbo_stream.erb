<%# Show error message at top of form %>
<%= turbo_stream.prepend "comments_container" do %>
  <div id="comment_error" class="mb-4 p-3 rounded-lg bg-rose-light border border-rose text-rose-dark text-sm">
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <span><%= @comment.errors.full_messages.join(", ") %></span>
    </div>
  </div>
<% end %>
