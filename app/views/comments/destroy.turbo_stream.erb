<%= turbo_stream.remove dom_id(@comment) %>

<%# Update comment count %>
<%= turbo_stream.update "comments_count" do %>
  <span class="px-3 py-1 rounded-full bg-lavender-light text-lavender-dark text-sm font-medium">
    <%= @stay.comments.count %> <%= "comment".pluralize(@stay.comments.count) %>
  </span>
<% end %>

<%# Show empty state if no comments left %>
<% if @stay.comments.count == 0 %>
  <%= turbo_stream.update "comments_list" do %>
    <div id="comments_empty_state" class="text-center py-6">
      <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-lavender-light flex items-center justify-center">
        <svg class="w-6 h-6 text-lavender" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </div>
      <p class="text-brown-light text-sm">No comments yet</p>
      <p class="text-taupe text-xs mt-1">Be the first to share your thoughts!</p>
    </div>
  <% end %>
<% end %>
