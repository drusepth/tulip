<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Tulip" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Google Fonts Preconnect for Performance %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <%# Leaflet CSS and JS %>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <%# Chart.js %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-cream min-h-screen">
    <% if notice.present? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="alert-success p-4 flex items-center gap-3">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <p class="text-sm"><%= notice %></p>
        </div>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="alert-error p-4 flex items-center gap-3">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <p class="text-sm"><%= alert %></p>
        </div>
      </div>
    <% end %>

    <%= yield %>

    <% if user_signed_in? %>
      <nav class="navbar-grass bg-white backdrop-blur-sm border-t border-taupe-light fixed bottom-0 left-0 right-0 z-50">
        <div class="px-3 sm:px-6">
          <div class="flex justify-between items-center h-14 relative">
            <!-- Left side: Logo and Travel Map -->
            <div class="flex items-center gap-1 sm:gap-3">
              <%= link_to root_path, class: "flex items-center gap-2 text-brown hover:text-sage-dark transition-colors", title: "Home" do %>
                <svg class="w-7 h-7" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <!-- Stem -->
                  <path d="M12 22V12" stroke="#7d8c6e" stroke-width="2" stroke-linecap="round"/>
                  <!-- Leaves -->
                  <path d="M12 18c-2-1-4 0-5 2 2 0 4-1 5-2z" fill="#a8b5a0"/>
                  <path d="M12 16c2-1 4 0 5 2-2 0-4-1-5-2z" fill="#a8b5a0"/>
                  <!-- Flower petals -->
                  <ellipse cx="12" cy="6" rx="4" ry="5" fill="#d4a5a5"/>
                  <ellipse cx="9" cy="7" rx="3" ry="4" fill="#c9918f"/>
                  <ellipse cx="15" cy="7" rx="3" ry="4" fill="#c9918f"/>
                  <ellipse cx="12" cy="8" rx="2.5" ry="3" fill="#e8c4c4"/>
                </svg>
                <span class="font-semibold text-lg" style="font-family: var(--font-heading);">Tulip<span class="hidden md:inline"> Trip Planner</span></span>
              <% end %>
              <%= link_to map_path, class: "flex items-center gap-1 p-2.5 md:py-1.5 md:px-3 text-brown-light hover:text-brown hover:bg-sage-light rounded-xl transition-colors", title: "Travel Map" do %>
                <svg class="w-6 h-6 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                </svg>
                <span class="hidden md:inline text-sm">Travel Map</span>
              <% end %>
            </div>

            <!-- Right side -->
            <div class="flex items-center gap-1 sm:gap-3">
              <%# + button: centered on mobile (absolute), inline on desktop %>
              <%= link_to new_stay_path, class: "btn-primary flex items-center gap-1 absolute left-1/2 -translate-x-1/2 p-2.5 md:static md:translate-x-0 md:py-1.5 md:px-3", title: "Plan a trip" do %>
                <svg class="w-6 h-6 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <span class="hidden md:inline text-sm">New Trip</span>
              <% end %>

              <%# Notification Bell %>
              <div data-controller="notifications" class="relative">
                <button type="button"
                        class="p-2.5 text-brown-light hover:text-brown hover:bg-sage-light rounded-xl transition-colors relative"
                        data-action="click->notifications#toggle"
                        title="Notifications">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
                  </svg>
                  <span id="notification_badge" data-notifications-target="badge">
                    <%= render "notifications/badge", count: current_user.unread_notifications_count %>
                  </span>
                </button>
                <%= render "notifications/panel" %>
              </div>

              <%= link_to edit_user_registration_path, class: "p-1 hover:opacity-80 transition-opacity", title: "Account" do %>
                <%= avatar_tag(current_user, size: 32, html_options: { class: "w-8 h-8 sm:w-9 sm:h-9 border-2 border-taupe-light" }) %>
              <% end %>
              <%= button_to destroy_user_session_path, method: :delete, class: "p-2.5 text-brown-light hover:text-rose-dark hover:bg-rose-light rounded-xl transition-colors", title: "Log out" do %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Shared tooltip element for site-wide tooltips -->
    <div id="tooltip" class="cozy-tooltip hidden fixed text-sm px-4 py-3 rounded-2xl z-50 pointer-events-none"></div>
  </body>
</html>
