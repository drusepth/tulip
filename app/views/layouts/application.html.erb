<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Tulip" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Google Fonts Preconnect for Performance %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <%# Leaflet CSS and JS %>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>

    <%# Chart.js %>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-cream min-h-screen">
    <% if notice.present? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="alert-success p-4 flex items-center gap-3">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <p class="text-sm"><%= notice %></p>
        </div>
      </div>
    <% end %>

    <% if alert.present? %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="alert-error p-4 flex items-center gap-3">
          <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <p class="text-sm"><%= alert %></p>
        </div>
      </div>
    <% end %>

    <%= yield %>

    <% if user_signed_in? %>
      <nav class="navbar-grass bg-white backdrop-blur-sm border-t border-taupe-light fixed bottom-0 left-0 right-0 z-50">
        <div class="px-3 sm:px-6">
          <div class="flex justify-between items-center h-14">
            <!-- Logo - icon only on mobile -->
            <%= link_to root_path, class: "tulip-logo-link flex items-center gap-2 text-brown hover:text-sage-dark transition-colors", title: "Home" do %>
              <svg class="tulip-bloom" viewBox="0 0 24 60" aria-hidden="true">
                <path class="tulip-stem" d="M12 58 Q12 40 12 22"/>
                <path class="tulip-leaf" d="M12 45 Q6 42 4 48 Q8 46 12 45"/>
                <path class="tulip-leaf" d="M12 40 Q18 37 20 43 Q16 41 12 40"/>
                <path class="tulip-flower" d="M12 22 Q8 22 6 16 Q5 10 8 4 Q10 2 12 2 Q14 2 16 4 Q19 10 18 16 Q16 22 12 22 Z"/>
                <path class="tulip-flower" d="M12 20 Q9 20 7 15 Q6 10 9 5 Q11 4 12 4 Q13 4 15 5 Q18 10 17 15 Q15 20 12 20 Z" style="opacity: 0.8"/>
                <path class="tulip-flower" d="M12 18 Q10 18 8 14 Q7 10 10 6 Q11 5 12 5 Q13 5 14 6 Q17 10 16 14 Q14 18 12 18 Z" style="opacity: 0.6"/>
              </svg>
              <span class="hidden sm:inline font-semibold text-lg" style="font-family: var(--font-heading);">Tulip</span>
            <% end %>

            <!-- Center nav - icon buttons -->
            <div class="flex items-center gap-1 sm:gap-3">
              <%= link_to map_path, class: "p-2.5 text-brown-light hover:text-brown hover:bg-sage-light/50 rounded-xl transition-colors", title: "Map" do %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                </svg>
              <% end %>
              <%= link_to timeline_path, class: "p-2.5 text-brown-light hover:text-brown hover:bg-sage-light/50 rounded-xl transition-colors", title: "Timeline" do %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              <% end %>
              <%= link_to new_stay_path, class: "btn-primary p-2.5 sm:py-1.5 sm:px-3", title: "Plan a trip" do %>
                <svg class="w-6 h-6 sm:w-4 sm:h-4 sm:mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                <span class="hidden sm:inline">New Trip</span>
              <% end %>
            </div>

            <!-- Right side -->
            <div class="flex items-center gap-1 sm:gap-3">
              <%= link_to edit_user_registration_path, class: "p-1 hover:opacity-80 transition-opacity", title: "Account" do %>
                <%= avatar_tag(current_user, size: 32, html_options: { class: "w-8 h-8 sm:w-9 sm:h-9 border-2 border-taupe-light" }) %>
              <% end %>
              <%= button_to destroy_user_session_path, method: :delete, class: "hidden sm:flex btn-outline text-sm py-1.5 px-3", title: "Log out" do %>
                Log out
              <% end %>
              <%= button_to destroy_user_session_path, method: :delete, class: "sm:hidden p-2.5 text-brown-light hover:text-rose-dark hover:bg-rose-light/50 rounded-xl transition-colors", title: "Log out" do %>
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <!-- Shared tooltip element for site-wide tooltips -->
    <div id="tooltip" class="cozy-tooltip hidden fixed text-sm px-4 py-3 rounded-2xl z-50 pointer-events-none"></div>
  </body>
</html>
